# ðŸŒŸ HEALTHFY AI-POWERED MEDICAL PLATFORM - ENVIRONMENT CONFIGURATION

# =========== DATABASE CONFIGURATION ===========
DB_URI=mongodb://localhost:27017/healthfy
DB_NAME=healthfy

# =========== SERVER CONFIGURATION ===========
PORT=3000
NODE_ENV=development

# =========== SESSION CONFIGURATION ===========
SESSION_SECRET=your_super_secret_session_key_here_make_it_random_and_strong

# =========== GOOGLE GEMINI AI CONFIGURATION ===========
# Get your free API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =========== EMAIL CONFIGURATION (Optional) ===========
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# =========== FILE UPLOAD CONFIGURATION ===========
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads/

# =========== SECURITY CONFIGURATION ===========
JWT_SECRET=your_jwt_secret_key_for_tokens
BCRYPT_ROUNDS=12

# =========== EXTERNAL API KEYS (Optional) ===========
# For additional medical data sources
MEDICAL_API_KEY=your_medical_api_key_here

# =========== DEVELOPMENT TOOLS ===========
DEBUG=healthfy:*
LOG_LEVEL=info

