<script>
// Load user achievements
document.addEventListener('DOMContentLoaded', function() {
  loadUserAchievements();
});

async function loadUserAchievements() {
  try {
    const response = await fetch('/challenges/api/my-achievements');
    if (response.ok) {
      const data = await response.json();
      updateAchievementsUI(data);
    }
  } catch (error) {
    console.error('Failed to load user achievements:', error);
  }
}

function updateAchievementsUI(data) {
  if (data && data.achievements) {
    // Update overview stats
    document.getElementById('total-achievements').textContent = data.totalCount || 0;
    document.getElementById('completed-achievements').textContent = data.completedCount || 0;
    document.getElementById('in-progress-achievements').textContent = data.inProgressCount || 0;
    document.getElementById('completion-percentage').textContent = 
      Math.round((data.completedCount / data.totalCount) * 100) + '%' || '0%';
  }
}

// Achievement card hover effects
document.querySelectorAll('.achievement-card').forEach(card => {
  card.addEventListener('mouseenter', function() {
    this.style.transform = 'translateY(-5px) scale(1.02)';
  });
  
  card.addEventListener('mouseleave', function() {
    this.style.transform = 'translateY(-2px) scale(1)';
  });
});

// Animate progress bars on scroll
const observerOptions = {
  threshold: 0.1,
  rootMargin: '0px 0px -50px 0px'
};

const observer = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      const progressBar = entry.target.querySelector('.progress-bar');
      if (progressBar) {
        const width = progressBar.style.width;
        progressBar.style.width = '0%';
        setTimeout(() => {
          progressBar.style.width = width;
        }, 200);
      }
    }
  });
}, observerOptions);

document.querySelectorAll('.achievement-progress').forEach(progress => {
  observer.observe(progress);
});
</script>