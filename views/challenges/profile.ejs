<script>
// Load user profile data
document.addEventListener('DOMContentLoaded', function() {
  loadUserStats();
  animateProgressBars();
  
  // Update stats every 30 seconds
  setInterval(loadUserStats, 30000);
});

async function loadUserStats() {
  try {
    const response = await fetch('/challenges/api/stats');
    if (response.ok) {
      const data = await response.json();
      updateStatsUI(data);
    }
  } catch (error) {
    console.error('Failed to load user stats:', error);
  }
}

function updateStatsUI(data) {
  if (data) {
    document.getElementById('total-points').textContent = data.totalPoints || 0;
    document.getElementById('challenges-completed').textContent = data.challengesCompleted || 0;
    document.getElementById('current-streak').textContent = data.currentStreak || 0;
    document.getElementById('badges-earned').textContent = data.badgesEarned || 0;
    document.getElementById('rank-position').textContent = '#' + (data.globalRank || 'N/A');
  }
}

function animateProgressBars() {
  const progressBars = document.querySelectorAll('.progress-bar');
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const progressBar = entry.target;
        const width = progressBar.style.width;
        progressBar.style.width = '0%';
        setTimeout(() => {
          progressBar.style.width = width;
        }, 200);
      }
    });
  }, { threshold: 0.1 });

  progressBars.forEach(bar => {
    observer.observe(bar);
  });
}

// Add hover effects to cards
document.querySelectorAll('.stat-card, .content-section').forEach(card => {
  card.addEventListener('mouseenter', function() {
    this.style.transform = 'translateY(-2px)';
  });
  
  card.addEventListener('mouseleave', function() {
    this.style.transform = 'translateY(0)';
  });
});

// Activity item hover effects
document.querySelectorAll('.activity-item').forEach(item => {
  item.addEventListener('mouseenter', function() {
    this.style.transform = 'translateX(10px)';
  });
  
  item.addEventListener('mouseleave', function() {
    this.style.transform = 'translateX(5px)';
  });
});
</script>