<% layout('/layouts/boilerplate') %>

<div class="create-challenge-page">
    <!-- Hero Section -->
    <div class="hero-section bg-gradient-success text-white py-5 mb-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-5 font-weight-bold mb-3">
                        <i class="fas fa-plus-circle me-3"></i>Create New Challenge
                    </h1>
                    <p class="lead mb-4">Design an engaging health challenge to motivate yourself and inspire others on their wellness journey!</p>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-transparent p-0">
                            <li class="breadcrumb-item"><a href="/challenges" class="text-white-50">Challenges</a></li>
                            <li class="breadcrumb-item active text-white" aria-current="page">Create New</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-4 text-center">
                    <div class="create-icon">
                        <i class="fas fa-lightbulb fa-5x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Challenge Creation Form -->
                <div class="card border-0 shadow-lg">
                    <div class="card-header bg-white border-0 py-4">
                        <h4 class="mb-0">
                            <i class="fas fa-edit me-2 text-success"></i>Challenge Details
                        </h4>
                        <p class="text-muted mb-0 mt-2">Fill in the information below to create your custom health challenge.</p>
                    </div>
                    <div class="card-body p-4">
                        <form id="createChallengeForm">
                            <!-- Basic Information -->
                            <div class="section mb-5">
                                <h5 class="section-title mb-4">
                                    <i class="fas fa-info-circle me-2"></i>Basic Information
                                </h5>
                                
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label for="title" class="form-label">Challenge Title *</label>
                                        <input type="text" class="form-control form-control-lg" id="title" name="title" 
                                               placeholder="Enter a catchy title for your challenge" required maxlength="100">
                                        <div class="form-text">Make it inspiring and clear (max 100 characters)</div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="category" class="form-label">Category *</label>
                                        <select class="form-select form-select-lg" id="category" name="category" required>
                                            <option value="">Select a category</option>
                                            <option value="fitness">üèÉ‚Äç‚ôÇÔ∏è Fitness & Exercise</option>
                                            <option value="nutrition">ü•ó Nutrition & Diet</option>
                                            <option value="mental-health">üß† Mental Health</option>
                                            <option value="sleep">üò¥ Sleep & Rest</option>
                                            <option value="hydration">üíß Hydration</option>
                                            <option value="meditation">üßò‚Äç‚ôÇÔ∏è Meditation & Mindfulness</option>
                                            <option value="social">üë• Social Wellness</option>
                                            <option value="medical">‚öïÔ∏è Medical & Healthcare</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="difficulty" class="form-label">Difficulty Level *</label>
                                        <select class="form-select form-select-lg" id="difficulty" name="difficulty" required>
                                            <option value="">Select difficulty</option>
                                            <option value="beginner">üü¢ Beginner - Easy to start</option>
                                            <option value="intermediate">üü° Intermediate - Moderate effort</option>
                                            <option value="advanced">üî¥ Advanced - Requires dedication</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label for="description" class="form-label">Short Description *</label>
                                        <textarea class="form-control" id="description" name="description" rows="3" 
                                                  placeholder="Briefly describe what this challenge is about" required maxlength="500"></textarea>
                                        <div class="form-text">Keep it concise and motivating (max 500 characters)</div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label for="instructions" class="form-label">Detailed Instructions</label>
                                        <textarea class="form-control" id="instructions" name="instructions" rows="5" 
                                                  placeholder="Provide detailed instructions on how to complete this challenge"></textarea>
                                        <div class="form-text">Clear instructions help participants succeed</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Challenge Configuration -->
                            <div class="section mb-5">
                                <h5 class="section-title mb-4">
                                    <i class="fas fa-cogs me-2"></i>Challenge Configuration
                                </h5>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="targetValue" class="form-label">Target Value *</label>
                                        <input type="number" class="form-control form-control-lg" id="targetValue" 
                                               name="targetValue" placeholder="100" required min="1">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="targetUnit" class="form-label">Unit *</label>
                                        <select class="form-select form-select-lg" id="targetUnit" name="targetUnit" required>
                                            <option value="">Select unit</option>
                                            <option value="steps">Steps</option>
                                            <option value="minutes">Minutes</option>
                                            <option value="hours">Hours</option>
                                            <option value="days">Days</option>
                                            <option value="times">Times</option>
                                            <option value="glasses">Glasses</option>
                                            <option value="servings">Servings</option>
                                            <option value="kg">Kilograms</option>
                                            <option value="lbs">Pounds</option>
                                            <option value="calories">Calories</option>
                                            <option value="points">Points</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="type" class="form-label">Challenge Type *</label>
                                        <select class="form-select form-select-lg" id="type" name="type" required>
                                            <option value="">Select type</option>
                                            <option value="daily">üìÖ Daily Goal</option>
                                            <option value="weekly">üìÜ Weekly Goal</option>
                                            <option value="monthly">üóìÔ∏è Monthly Goal</option>
                                            <option value="one-time">‚ö° One-time Goal</option>
                                            <option value="ongoing">üîÑ Ongoing Challenge</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="startDate" class="form-label">Start Date *</label>
                                        <input type="datetime-local" class="form-control form-control-lg" 
                                               id="startDate" name="startDate" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="endDate" class="form-label">End Date *</label>
                                        <input type="datetime-local" class="form-control form-control-lg" 
                                               id="endDate" name="endDate" required>
                                    </div>
                                </div>
                            </div>

                            <!-- Rewards & Motivation -->
                            <div class="section mb-5">
                                <h5 class="section-title mb-4">
                                    <i class="fas fa-trophy me-2"></i>Rewards & Motivation
                                </h5>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="rewardPoints" class="form-label">Reward Points</label>
                                        <input type="number" class="form-control" id="rewardPoints" 
                                               name="rewardPoints" placeholder="100" min="0" value="100">
                                        <div class="form-text">Points awarded upon completion</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="isPublic" class="form-label">Visibility</label>
                                        <select class="form-select" id="isPublic" name="isPublic">
                                            <option value="true">üåê Public - Anyone can join</option>
                                            <option value="false">üîí Private - Only you can see it</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label for="tags" class="form-label">Tags (Optional)</label>
                                        <input type="text" class="form-control" id="tags" name="tags" 
                                               placeholder="fitness, health, daily, motivation">
                                        <div class="form-text">Separate tags with commas to help others find your challenge</div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label for="tips" class="form-label">Tips & Advice</label>
                                        <textarea class="form-control" id="tips" name="tips" rows="3" 
                                                  placeholder="Share helpful tips to help participants succeed"></textarea>
                                        <div class="form-text">Motivational tips increase engagement</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Form Actions -->
                            <div class="form-actions">
                                <hr class="my-4">
                                <div class="d-flex justify-content-between flex-wrap gap-3">
                                    <div>
                                        <button type="button" class="btn btn-outline-secondary" onclick="history.back()">
                                            <i class="fas fa-arrow-left me-2"></i>Cancel
                                        </button>
                                    </div>
                                    <div>
                                        <button type="button" class="btn btn-outline-primary me-2" id="previewBtn">
                                            <i class="fas fa-eye me-2"></i>Preview
                                        </button>
                                        <button type="submit" class="btn btn-success btn-lg">
                                            <i class="fas fa-rocket me-2"></i>Create Challenge
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
