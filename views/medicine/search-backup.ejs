<div class="medicine-search-container">
    <!-- Hero Section -->
    <div class="search-hero" data-aos="fade-down" data-aos-duration="800">
        <div class="search-hero-content">
            <h1 data-aos="fade-up" data-aos-delay="200">💊 Medicine Price Comparison</h1>
            <p data-aos="fade-up" data-aos-delay="400">Find the best prices for your medicines across multiple pharmacies with AI-powered search</p>
        </div>
    </div>

    <!-- Search Form -->
    <div class="search-form" data-aos="zoom-in" data-aos-delay="600">
        <form action="/medicine-search" method="POST">
            <div class="search-input-container">
                <input
                    type="text"
                    class="search-input"
                    name="medicineName"
                    placeholder="Enter medicine name (e.g., Paracetamol, Dolo 650...)"
                    value="<%= searchQuery || '' %>"
                    required
                    minlength="2"
                    autocomplete="off"
                    data-aos="fade-right"
                    data-aos-delay="700"
                >
                <button type="submit" class="search-btn" data-aos="fade-left" data-aos-delay="800">
                    <i class="fas fa-search"></i>
                    Search
                </button>
            </div>
        </form>
    </div>

    <!-- Search Results -->
    <% if (searchResults) { %>
        <div class="search-results">
            <div class="results-header" data-aos="fade-up" data-aos-delay="200">
                <h2 class="results-title">Results for "<span class="search-term"><%= searchResults.medicineName %></span>"</h2>
                <p class="results-meta">Search completed in <%= searchResults.searchDuration %>ms • <%= searchResults.platforms.length %> platforms checked</p>
            </div>
            <div class="platform-results">
                <% searchResults.platforms.forEach(function(platform, index) { %>
                    <% const isCheapest = searchResults.cheapestOption && platform.available && platform.prices && platform.prices.length > 0 && platform.prices[0].price === searchResults.cheapestOption.price && platform.platform === searchResults.cheapestOption.platform; %>
                    <div class="platform-card <%= isCheapest ? 'cheapest-highlight' : '' %>" data-aos="fade-up" data-aos-delay="<%= (index + 1) * 100 %>">
                        <% if (isCheapest) { %>
                            <div class="cheapest-badge">💰 Best Price</div>
                        <% } %>
                        <div class="platform-header">
                            <div class="platform-name">
                                <div class="platform-icon">
                                    <% if (platform.platform === '1mg') { %>🏥
                                    <% } else if (platform.platform === 'PharmEasy') { %>💊
                                    <% } else if (platform.platform === 'Netmeds') { %>⚕️
                                    <% } else if (platform.platform === 'Amazon') { %>📦
                                    <% } else { %>🏪<% } %>
                                </div>
                                <%= platform.platform %>
                            </div>
                            <div class="platform-status <%= platform.available ? 'status-available' : 'status-unavailable' %>">
                                <%= platform.available ? 'Available' : 'Not Available' %>
                            </div>
                        </div>
                        <% if (platform.available && platform.prices && platform.prices.length > 0) { %>
                            <div class="product-list">
                                <% platform.prices.forEach(function(product) { %>
                                    <div class="product-item">
                                        <div class="product-info">
                                            <h5><%= product.name %></h5>
                                            <div class="product-details">
                                                <div class="product-detail-item">
                                                    <i class="fas fa-store"></i>
                                                    <span><%= product.seller %></span>
                                                </div>
                                                <div class="product-detail-item <%= product.inStock ? 'in-stock' : 'out-of-stock' %>">
                                                    <i class="fas fa-<%= product.inStock ? 'check-circle' : 'times-circle' %>"></i>
                                                    <span><%= product.inStock ? 'In Stock' : 'Out of Stock' %></span>
                                                </div>
                                                <div class="product-detail-item">
                                                    <i class="fas fa-shipping-fast"></i>
                                                    <span><%= product.deliveryTime %></span>
                                                </div>
                                            </div>
                                            <div class="product-rating">
                                                <div class="rating-stars">
                                                    <% for (let i = 1; i <= 5; i++) { %>
                                                        <i class="fas fa-star <%= i <= product.rating ? '' : 'text-muted' %>"></i>
                                                    <% } %>
                                                    <span class="rating-text"><%= product.rating %></span>
                                                </div>
                                                <span class="rating-text">(<%= product.reviews %> reviews)</span>
                                            </div>
                                        </div>
                                        <div class="product-price">
                                            <div class="price-container">
                                                <div class="current-price">
                                                    <span class="currency">₹</span><%= product.price %>
                                                </div>
                                                <% if (product.discount > 0) { %>
                                                    <div class="original-price">₹<%= product.originalPrice %></div>
                                                    <div class="savings-amount">You save ₹<%= (product.originalPrice - product.price) %></div>
                                                    <div class="discount-badge"><%= product.discount %>% OFF</div>
                                                <% } %>
                                            </div>
                                            <div class="product-actions">
                                                <a href="<%= product.productUrl %>" target="_blank" class="btn-primary-action">
                                                    <i class="fas fa-shopping-cart"></i>
                                                    Buy Now
                                                </a>
                                                <a href="<%= product.productUrl %>" target="_blank" class="btn-secondary-action">
                                                    <i class="fas fa-external-link-alt"></i>
                                                    View Details
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                                <p style="text-align: center; margin-top: 1rem; color: #6c757d; font-size: 0.9rem;">
                                    Last updated: <%= new Date(platform.lastUpdated).toLocaleString() %>
                                </p>
                            </div>
                        <% } else { %>
                            <div class="product-list">
                                <p style="text-align: center; color: #6c757d; padding: 2rem;">
                                    <%= platform.error || 'Medicine not available on this platform' %>
                                </p>
                                <p style="text-align: center;">
                                    <a href="<%= platform.searchUrl %>" target="_blank" class="btn-primary-action">
                                        <i class="fas fa-external-link-alt"></i>
                                        Search on <%= platform.platform %>
                                    </a>
                                </p>
                            </div>
                        <% } %>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } else if (searchQuery && searchResults === null) { %>
        <!-- No Results -->
        <div class="no-results">
            <h3>😔 No Results Found for "<%= searchQuery %>"</h3>
            <p>We couldn't find any results for your search. Please try a different medicine name.</p>
        </div>
    <% } %>

    <!-- Trending Medicines -->
    <div class="trending-section" data-aos="fade-up" data-aos-delay="400">
        <h2 class="section-title">🔥 Trending Medicines</h2>
        <div class="trending-grid">
            <% trending.forEach((medicine, index) => { %>
            <div class="trending-card" onclick="document.querySelector('input[name=medicineName]').value='<%= medicine.name %>'; document.querySelector('form').submit();" data-aos="fade-up" data-aos-delay="<%= 600 + (index * 100) %>">
                <h4><%= medicine.name %></h4>
                <p class="trending-info">
                    <span class="trending-searches">📈 <%= medicine.searches %> searches</span>
                    <span class="trending-category"><%= medicine.category %></span>
                </p>
            </div>
            <% }); %>
        </div>
    </div>
</div>

<script>
// Initialize AOS (Animate On Scroll)
document.addEventListener('DOMContentLoaded', function() {
    AOS.init({
        duration: 800,
        easing: 'ease-out-cubic',
        once: true,
        offset: 100,
        delay: 100
    });
    
    // Enhanced search input interactions
    const searchInput = document.querySelector('.search-input');
    const searchBtn = document.querySelector('.search-btn');
    
    if (searchInput) {
        // Add loading state on form submission
        searchInput.closest('form').addEventListener('submit', function(e) {
            searchBtn.innerHTML = '<span class="loading-spinner"></span> Searching...';
            searchBtn.disabled = true;
        });
        
        // Enhanced focus effects
        searchInput.addEventListener('focus', function() {
            this.parentElement.style.transform = 'scale(1.02)';
            this.parentElement.style.transition = 'transform 0.3s ease';
        });
        
        searchInput.addEventListener('blur', function() {
            this.parentElement.style.transform = 'scale(1)';
        });
    }
    
    // Add hover effects to platform cards
    const platformCards = document.querySelectorAll('.platform-card');
    platformCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.zIndex = '10';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.zIndex = '1';
        });
    });
    
    // Add click animations to buttons
    const actionButtons = document.querySelectorAll('.btn-primary-action, .btn-secondary-action');
    actionButtons.forEach(button => {
        button.addEventListener('click', function(e) {
            const ripple = document.createElement('span');
            ripple.style.position = 'absolute';
            ripple.style.borderRadius = '50%';
            ripple.style.transform = 'scale(0)';
            ripple.style.background = 'rgba(255, 255, 255, 0.5)';
            ripple.style.animation = 'ripple 0.6s linear';
            
            const rect = this.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            ripple.style.width = ripple.style.height = size + 'px';
            ripple.style.left = e.clientX - rect.left - size / 2 + 'px';
            ripple.style.top = e.clientY - rect.top - size / 2 + 'px';
            
            this.style.position = 'relative';
            this.style.overflow = 'hidden';
            this.appendChild(ripple);
            
            setTimeout(() => {
                ripple.remove();
            }, 600);
        });
    });
});

// Add ripple animation CSS
const rippleCSS = document.createElement('style');
rippleCSS.textContent = `
    @keyframes ripple {
        to {
            transform: scale(2);
            opacity: 0;
        }
    }
`;
document.head.appendChild(rippleCSS);
</script>
