<div class="container">
    <!-- Search Card -->
    <div class="search-card animate__animated animate__zoomIn animate__delay-1s">
        <form class="search-form" action="/medicine-search" method="POST" id="searchForm">
            <div class="search-input-group">
                <input 
                    type="text" 
                    class="search-input" 
                    name="medicineName" 
                    placeholder="Enter medicine name (e.g., Paracetamol, Dolo 650, Azithromycin...)"
                    value="<%= searchQuery || '' %>"
                    required
                    minlength="2"
                    autocomplete="off"
                    id="medicineInput"
                >
                <button type="submit" class="search-button" id="searchBtn">
                    <i class="fas fa-search"></i>
                </button>
                <div class="search-suggestions" id="suggestions"></div>
            </div>
        </form>
    </div>

    <!-- Search Results -->
    <% if (typeof searchResults !== 'undefined' && searchResults) { %>
        <section class="results-section">
            <div class="results-header animate__animated animate__fadeInUp">
                <h2 class="results-title">
                    Results for "<span class="search-term"><%= searchResults.medicineName %></span>"
                </h2>
                <p class="results-meta">
                    Search completed in <%= searchResults.searchDuration %>ms • <%= searchResults.platforms.length %> platforms checked • 
                    <span class="text-success fw-semibold">Live prices updated</span>
                </p>
            </div>
            
            <div class="platforms-grid">
                <% 
                // Find cheapest option
                let cheapestPrice = null;
                let cheapestPlatform = null;
                searchResults.platforms.forEach(platform => {
                    if (platform.available && platform.prices && platform.prices.length > 0) {
                        const platformCheapest = platform.prices[0].price;
                        if (cheapestPrice === null || platformCheapest < cheapestPrice) {
                            cheapestPrice = platformCheapest;
                            cheapestPlatform = platform.platform;
                        }
                    }
                });
                %>
                
                <% searchResults.platforms.forEach(function(platform, index) { %>
                    <% const isBestPrice = platform.available && platform.prices && platform.prices.length > 0 && platform.prices[0].price === cheapestPrice && platform.platform === cheapestPlatform; %>
                    
                    <div class="platform-card <%= isBestPrice ? 'best-price' : '' %> animate__animated animate__fadeInUp" style="animation-delay: <%= (index + 1) * 200 %>ms;">
                        <% if (isBestPrice) { %>
                            <div class="best-price-badge">💰 Best Price Deal</div>
                        <% } %>
                        
                        <div class="platform-header">
                            <div class="platform-name">
                                <div class="platform-icon">
                                    <% if (platform.platform === '1mg') { %>🏥
                                    <% } else if (platform.platform === 'PharmEasy') { %>💊
                                    <% } else if (platform.platform === 'Netmeds') { %>⚕️
                                    <% } else if (platform.platform === 'Apollo Pharmacy') { %>🩺
                                    <% } else if (platform.platform === 'Amazon Pharmacy') { %>📦
                                    <% } else { %>🏪<% } %>
                                </div>
                                <span><%= platform.platform %></span>
                            </div>
                            <div class="platform-status">
                                <div class="status-indicator"></div>
                                <%= platform.available ? '✓ Available Now' : '✗ Currently Unavailable' %>
                            </div>
                        </div>
                        
                        <div class="platform-body">
                            <% if (platform.available && platform.prices && platform.prices.length > 0) { %>
                                <% platform.prices.forEach(function(product) { %>
                                    <div class="product-card">
                                        <div class="product-header">
                                            <h3 class="product-name"><%= product.name %></h3>
                                        </div>
                                        
                                        <div class="product-details">
                                            <div class="detail-item">
                                                <i class="fas fa-store"></i>
                                                <span><%= product.seller %></span>
                                            </div>
                                            <div class="detail-item <%= product.inStock ? 'in-stock' : 'out-of-stock' %>">
                                                <i class="fas fa-<%= product.inStock ? 'check-circle' : 'times-circle' %>"></i>
                                                <span><%= product.inStock ? 'In Stock' : 'Out of Stock' %></span>
                                            </div>
                                            <div class="detail-item">
                                                <i class="fas fa-shipping-fast"></i>
                                                <span><%= product.deliveryTime %></span>
                                            </div>
                                            <div class="detail-item">
                                                <i class="fas fa-star"></i>
                                                <span><%= product.rating %> ⭐ (<%= product.reviews %> reviews)</span>
                                            </div>
                                        </div>
                                        
                                        <div class="product-pricing">
                                            <div class="price-container">
                                                <div class="current-price">
                                                    <span class="currency">₹</span><%= product.price %>
                                                </div>
                                                <% if (product.discount > 0) { %>
                                                    <div class="original-price">₹<%= product.originalPrice %></div>
                                                    <div class="savings">You save ₹<%= (product.originalPrice - product.price) %></div>
                                                <% } %>
                                            </div>
                                            <% if (product.discount > 0) { %>
                                                <div class="discount-badge"><%= product.discount %>% OFF</div>
                                            <% } %>
                                        </div>
                                        
                                        <div class="product-actions">
                                            <a href="<%= product.productUrl %>" target="_blank" class="btn-primary-modern">
                                                <i class="fas fa-shopping-cart"></i>
                                                Buy Now
                                            </a>
                                            <a href="<%= product.productUrl %>" target="_blank" class="btn-secondary-modern">
                                                <i class="fas fa-external-link-alt"></i>
                                                View Details
                                            </a>
                                        </div>
                                    </div>
                                <% }) %>
                                
                                <div class="text-center mt-3">
                                    <small class="text-muted fw-medium">
                                        <i class="fas fa-clock me-1"></i>
                                        Last updated: <%= new Date(platform.lastUpdated).toLocaleString() %>
                                    </small>
                                </div>
                            <% } else { %>
                                <div class="no-results">
                                    <div class="no-results-icon">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </div>
                                    <h3>Not Available</h3>
                                    <p>Medicine currently not available on this platform</p>
                                    <a href="<%= platform.searchUrl %>" target="_blank" class="btn-primary-modern mt-3">
                                        <i class="fas fa-external-link-alt me-2"></i>
                                        Search on <%= platform.platform %>
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    <% } else if (typeof searchQuery !== 'undefined' && searchQuery && searchResults === null) { %>
        <div class="no-results animate__animated animate__fadeInUp">
            <div class="no-results-icon">
                <i class="fas fa-search-minus"></i>
            </div>
            <h3>No Results Found</h3>
            <p>We couldn't find any results for "<strong><%= searchQuery %></strong>". Please try a different medicine name or check the spelling.</p>
        </div>
    <% } %>

    <!-- Trending Section -->
    <% if (typeof trending !== 'undefined' && trending && trending.length > 0) { %>
        <section class="trending-section">
            <div class="section-header animate__animated animate__fadeInUp">
                <h2 class="section-title">🔥 Trending Medicines</h2>
                <p class="section-subtitle">Most searched medicines by healthcare professionals and patients</p>
            </div>
            
            <div class="trending-grid">
                <% trending.forEach(function(medicine, index) { %>
                    <div class="trending-card animate__animated animate__fadeInUp" 
                         style="animation-delay: <%= (index + 1) * 100 %>ms;"
                         onclick="searchTrendingMedicine('<%= medicine.name %>')">
                        <div class="trending-icon">💊</div>
                        <h3 class="trending-name"><%= medicine.name %></h3>
                        <div class="trending-stats">
                            <span class="trending-searches">
                                <i class="fas fa-chart-line me-1"></i>
                                <%= medicine.searches %> searches
                            </span>
                        </div>
                        <span class="trending-category"><%= medicine.category %></span>
                    </div>
                <% }) %>
            </div>
        </section>
    <% } %>
</div>

<script>
// Enhanced JavaScript functionality
document.addEventListener('DOMContentLoaded', function() {
    const searchForm = document.getElementById('searchForm');
    const searchBtn = document.getElementById('searchBtn');
    const medicineInput = document.getElementById('medicineInput');
    const suggestions = document.getElementById('suggestions');
    
    // Search form submission with loading state
    searchForm.addEventListener('submit', function(e) {
        searchBtn.innerHTML = '<span class="loading-spinner"></span> Searching...';
        searchBtn.disabled = true;
        
        // Add searching animation to the page
        document.body.style.cursor = 'wait';
        
        // Show loading overlay effect
        const loadingOverlay = document.createElement('div');
        loadingOverlay.style.cssText = `
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(16, 185, 129, 0.1);
            backdrop-filter: blur(2px);
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: var(--medical-primary);
            font-weight: 600;
        `;
        loadingOverlay.innerHTML = `
            <div style="text-align: center;">
                <div style="font-size: 3rem; margin-bottom: 1rem;">🔍</div>
                <div>Searching across all pharmacies...</div>
            </div>
        `;
        document.body.appendChild(loadingOverlay);
    });
    
    // Enhanced input interactions
    medicineInput.addEventListener('focus', function() {
        this.parentElement.style.transform = 'scale(1.02)';
        this.parentElement.style.transition = 'transform 0.3s ease';
    });
    
    medicineInput.addEventListener('blur', function() {
        this.parentElement.style.transform = 'scale(1)';
        setTimeout(() => {
            suggestions.style.display = 'none';
        }, 200);
    });
    
    // Mock autocomplete functionality
    medicineInput.addEventListener('input', function() {
        const query = this.value.trim();
        
        if (query.length >= 2) {
            showSuggestions(query);
        } else {
            suggestions.style.display = 'none';
        }
    });
    
    function showSuggestions(query) {
        const mockSuggestions = [
            { name: 'Paracetamol', category: 'Pain Relief' },
            { name: 'Dolo 650', category: 'Fever & Pain' },
            { name: 'Crocin', category: 'Fever & Pain' },
            { name: 'Azithromycin', category: 'Antibiotic' },
            { name: 'Amoxicillin', category: 'Antibiotic' },
            { name: 'Combiflam', category: 'Pain Relief' },
            { name: 'Cetirizine', category: 'Allergy' },
            { name: 'Pantoprazole', category: 'Acidity' }
        ];
        
        const filtered = mockSuggestions.filter(med => 
            med.name.toLowerCase().includes(query.toLowerCase())
        ).slice(0, 5);
        
        if (filtered.length > 0) {
            suggestions.innerHTML = filtered.map(med => `
                <div class="suggestion-item" onclick="selectSuggestion('${med.name}')">
                    <i class="fas fa-pills" style="color: var(--medical-primary);"></i>
                    <div>
                        <strong>${med.name}</strong>
                        <div style="font-size: 0.8rem; color: var(--text-muted);">${med.category}</div>
                    </div>
                </div>
            `).join('');
            suggestions.style.display = 'block';
        } else {
            suggestions.style.display = 'none';
        }
    }
    
    // Add ripple effect to buttons
    document.querySelectorAll('.btn-primary-modern, .btn-secondary-modern, .trending-card').forEach(button => {
        button.addEventListener('click', function(e) {
            const ripple = document.createElement('span');
            const rect = this.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            const x = e.clientX - rect.left - size / 2;
            const y = e.clientY - rect.top - size / 2;
            
            ripple.style.cssText = `
                position: absolute;
                width: ${size}px;
                height: ${size}px;
                left: ${x}px;
                top: ${y}px;
                background: rgba(255, 255, 255, 0.3);
                border-radius: 50%;
                transform: scale(0);
                animation: ripple 0.6s linear;
                pointer-events: none;
            `;
            
            this.style.position = 'relative';
            this.style.overflow = 'hidden';
            this.appendChild(ripple);
            
            setTimeout(() => ripple.remove(), 600);
        });
    });
    
    // Add scroll animations
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver(function(entries) {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animate__fadeInUp');
            }
        });
    }, observerOptions);
    
    document.querySelectorAll('.platform-card, .trending-card').forEach(card => {
        observer.observe(card);
    });
    
    // Add parallax effect to floating shapes
    window.addEventListener('scroll', function() {
        const scrolled = window.pageYOffset;
        const shapes = document.querySelectorAll('.shape');
        
        shapes.forEach((shape, index) => {
            const speed = 0.5 + (index * 0.1);
            shape.style.transform = `translateY(${scrolled * speed}px)`;
        });
    });
});

// Global functions
function selectSuggestion(name) {
    document.getElementById('medicineInput').value = name;
    document.getElementById('suggestions').style.display = 'none';
    document.getElementById('searchForm').submit();
}

function searchTrendingMedicine(name) {
    document.getElementById('medicineInput').value = name;
    document.getElementById('searchForm').submit();
}

// Add custom ripple animation CSS
const rippleCSS = document.createElement('style');
rippleCSS.textContent = `
    @keyframes ripple {
        to {
            transform: scale(2);
            opacity: 0;
        }
    }
`;
document.head.appendChild(rippleCSS);

// Add smooth scroll behavior
document.documentElement.style.scrollBehavior = 'smooth';

// Add loading screen removal
window.addEventListener('load', function() {
    const loadingOverlay = document.querySelector('[style*="position: fixed"]');
    if (loadingOverlay) {
        loadingOverlay.remove();
    }
    document.body.style.cursor = 'default';
});
</script>
