<% layout('layouts/boilerplate') %>

<style>
:root {
    --medical-primary: #10b981;
    --medical-secondary: #059669;
    --medical-light: #ecfdf5;
    --medical-dark: #064e3b;
    --medical-accent: #34d399;
}

.hero-section {
    background: linear-gradient(135deg, var(--medical-primary) 0%, var(--medical-secondary) 100%);
    color: white;
    padding: 3rem 0;
    margin-bottom: 2rem;
    border-radius: 15px;
}

.search-card {
    background: white;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.2);
    margin-top: -50px;
    position: relative;
    z-index: 10;
}

.platform-card {
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    transition: all 0.3s ease;
    height: 100%;
}

.platform-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(16, 185, 129, 0.15);
    border-color: var(--medical-primary);
}

.platform-header {
    background: var(--medical-primary);
    color: white;
    border-radius: 10px 10px 0 0;
    padding: 1rem;
}

.cheapest-card {
    border-color: var(--medical-primary) !important;
    box-shadow: 0 0 20px rgba(16, 185, 129, 0.3) !important;
}

.cheapest-badge {
    position: absolute;
    top: -10px;
    left: 20px;
    background: var(--medical-primary);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: bold;
    font-size: 0.85rem;
    z-index: 5;
}

.trending-card {
    cursor: pointer;
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
}

.trending-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    border-color: var(--medical-accent);
}

.btn-search {
    background: var(--medical-primary);
    border-color: var(--medical-primary);
    border-radius: 0 25px 25px 0;
}

.btn-search:hover {
    background: var(--medical-secondary);
    border-color: var(--medical-secondary);
}

.form-control {
    border-radius: 25px 0 0 25px;
    border-right: none;
}

.price-highlight {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--medical-primary);
}

.original-price {
    text-decoration: line-through;
    color: #6b7280;
}

.savings {
    color: #22c55e;
    font-weight: 600;
}
</style>

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-3">üíä Medicine Price Comparison</h1>
            <p class="lead mb-0">Find the best prices for your medicines across multiple pharmacies with AI-powered search</p>
        </div>
    </div>

    <div class="container">
        <!-- Search Form -->
        <div class="search-card p-4 mb-5">
            <form action="/medicine-search" method="POST">
                <div class="input-group input-group-lg">
                    <input 
                        type="text" 
                        class="form-control" 
                        name="medicineName" 
                        placeholder="Enter medicine name (e.g., Paracetamol, Dolo 650...)"
                        value="<%= searchQuery || '' %>"
                        required
                        minlength="2"
                        autocomplete="off"
                    >
                    <button class="btn btn-search btn-primary px-4" type="submit">
                        <i class="fas fa-search me-2"></i>Search
                    </button>
                </div>
            </form>
        </div>

        <!-- Search Results -->
        <% if (typeof searchResults !== 'undefined' && searchResults) { %>
            <div class="mb-5">
                <div class="text-center mb-4">
                    <h2 class="h3">Results for "<span class="text-primary"><%= searchResults.medicineName %></span>"</h2>
                    <p class="text-muted">Search completed in <%= searchResults.searchDuration %>ms ‚Ä¢ <%= searchResults.platforms.length %> platforms checked</p>
                </div>
                
                <div class="row">
                    <% 
                    // Find cheapest option
                    let cheapestPrice = null;
                    let cheapestPlatform = null;
                    searchResults.platforms.forEach(platform => {
                        if (platform.available && platform.prices && platform.prices.length > 0) {
                            const platformCheapest = platform.prices[0].price;
                            if (cheapestPrice === null || platformCheapest < cheapestPrice) {
                                cheapestPrice = platformCheapest;
                                cheapestPlatform = platform.platform;
                            }
                        }
                    });
                    %>
                    
                    <% searchResults.platforms.forEach(function(platform) { %>
                        <% const isCheapest = platform.available && platform.prices && platform.prices.length > 0 && platform.prices[0].price === cheapestPrice && platform.platform === cheapestPlatform; %>
                        
                        <div class="col-lg-6 col-xl-4 mb-4">
                            <div class="card platform-card <%= isCheapest ? 'cheapest-card' : '' %> h-100">
                                <% if (isCheapest) { %>
                                    <div class="cheapest-badge">üí∞ Best Price</div>
                                <% } %>
                                
                                <div class="platform-header d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0 fw-bold">
                                        <% if (platform.platform === '1mg') { %>üè•
                                        <% } else if (platform.platform === 'PharmEasy') { %>üíä
                                        <% } else if (platform.platform === 'Netmeds') { %>‚öïÔ∏è
                                        <% } else if (platform.platform === 'Amazon Pharmacy') { %>üì¶
                                        <% } else { %>üè™<% } %>
                                        <%= platform.platform %>
                                    </h5>
                                    <span class="badge <%= platform.available ? 'bg-light text-success' : 'bg-light text-danger' %>">
                                        <%= platform.available ? '‚úì Available' : '‚úó Not Available' %>
                                    </span>
                                </div>
                                
                                <div class="card-body">
                                    <% if (platform.available && platform.prices && platform.prices.length > 0) { %>
                                        <% platform.prices.forEach(function(product) { %>
                                            <div class="mb-3 <% if (platform.prices.length > 1) { %>border-bottom pb-3<% } %>">
                                                <h6 class="fw-semibold mb-2"><%= product.name %></h6>
                                                
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <div>
                                                        <span class="price-highlight">‚Çπ<%= product.price %></span>
                                                        <% if (product.discount > 0) { %>
                                                            <div class="small">
                                                                <span class="original-price">‚Çπ<%= product.originalPrice %></span>
                                                                <span class="savings ms-1">Save ‚Çπ<%= (product.originalPrice - product.price) %></span>
                                                            </div>
                                                        <% } %>
                                                    </div>
                                                    <% if (product.discount > 0) { %>
                                                        <span class="badge bg-success"><%= product.discount %>% OFF</span>
                                                    <% } %>
                                                </div>
                                                
                                                <div class="row g-2 mb-2">
                                                    <div class="col-6">
                                                        <small class="text-muted">
                                                            <i class="fas fa-store me-1"></i><%= product.seller %>
                                                        </small>
                                                    </div>
                                                    <div class="col-6">
                                                        <small class="text-muted">
                                                            <i class="fas fa-shipping-fast me-1"></i><%= product.deliveryTime %>
                                                        </small>
                                                    </div>
                                                    <div class="col-6">
                                                        <small class="text-muted">
                                                            <i class="fas fa-star text-warning me-1"></i><%= product.rating %> (<%= product.reviews %>)
                                                        </small>
                                                    </div>
                                                    <div class="col-6">
                                                        <span class="badge <%= product.inStock ? 'bg-success' : 'bg-warning' %> small">
                                                            <%= product.inStock ? 'In Stock' : 'Out of Stock' %>
                                                        </span>
                                                    </div>
                                                </div>
                                                
                                                <div class="d-flex gap-2">
                                                    <a href="<%= product.productUrl %>" target="_blank" class="btn btn-primary btn-sm flex-fill">
                                                        <i class="fas fa-shopping-cart me-1"></i>Buy Now
                                                    </a>
                                                    <a href="<%= product.productUrl %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-external-link-alt"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        <% }) %>
                                        
                                        <div class="text-center mt-2">
                                            <small class="text-muted">Last updated: <%= new Date(platform.lastUpdated).toLocaleString() %></small>
                                        </div>
                                    <% } else { %>
                                        <div class="text-center py-4">
                                            <i class="fas fa-exclamation-circle text-muted fa-2x mb-2"></i>
                                            <p class="text-muted mb-3">Medicine not available on this platform</p>
                                            <a href="<%= platform.searchUrl %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-external-link-alt me-1"></i>Search on <%= platform.platform %>
                                            </a>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } else if (typeof searchQuery !== 'undefined' && searchQuery && searchResults === null) { %>
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle fa-2x mb-3"></i>
                <h4>No Results Found</h4>
                <p class="mb-0">We couldn't find any results for "<strong><%= searchQuery %></strong>". Please try a different medicine name.</p>
            </div>
        <% } %>

        <!-- Trending Medicines -->
        <% if (typeof trending !== 'undefined' && trending && trending.length > 0) { %>
            <div class="mb-5">
                <div class="text-center mb-4">
                    <h2 class="h3">üî• Trending Medicines</h2>
                    <p class="text-muted">Popular searches by other users</p>
                </div>
                
                <div class="row">
                    <% trending.forEach(function(medicine) { %>
                        <div class="col-md-6 col-lg-4 col-xl-3 mb-3">
                            <div class="card trending-card h-100" onclick="searchMedicine('<%= medicine.name %>')">
                                <div class="card-body text-center">
                                    <h6 class="card-title fw-bold text-primary"><%= medicine.name %></h6>
                                    <p class="card-text mb-2">
                                        <small class="text-success fw-semibold">
                                            <i class="fas fa-chart-line me-1"></i><%= medicine.searches %> searches
                                        </small>
                                    </p>
                                    <span class="badge bg-secondary"><%= medicine.category %></span>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script>
function searchMedicine(name) {
    document.querySelector('input[name="medicineName"]').value = name;
    document.querySelector('form').submit();
}

// Add loading state on form submission
document.querySelector('form').addEventListener('submit', function(e) {
    const button = this.querySelector('button[type="submit"]');
    button.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Searching...';
    button.disabled = true;
});
</script>
