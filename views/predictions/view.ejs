<% layout('/layouts/boilerplate') %>

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
/* Modern Medical Dashboard Styling */
:root {
  --medical-primary: #0d6efd;
  --medical-success: #198754;
  --medical-warning: #ffc107;
  --medical-danger: #dc3545;
  --medical-light: #f8f9fa;
  --medical-dark: #212529;
  --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --gradient-success: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  --gradient-warning: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  --gradient-danger: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  --shadow-soft: 0 10px 30px -5px rgba(0, 0, 0, 0.1);
  --shadow-hover: 0 20px 40px -5px rgba(0, 0, 0, 0.15);
}

.medical-card {
  border: none;
  border-radius: 20px;
  box-shadow: var(--shadow-soft);
  transition: all 0.3s ease;
  overflow: hidden;
}

.medical-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-hover);
}

.medical-header {
  background: var(--gradient-primary);
  border: none;
  padding: 1.5rem;
}

.xray-display {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 20px;
  padding: 3rem;
  margin: 2rem;
  text-align: center;
  min-height: 300px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.xray-emoji {
  font-size: 6rem;
  margin-bottom: 1rem;
  animation: pulse 2s infinite ease-in-out;
  filter: drop-shadow(0 4px 8px rgba(0,0,0,0.1));
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.1); opacity: 1; }
  100% { transform: scale(1); opacity: 0.8; }
}

.finding-card {
  border: none;
  border-radius: 15px;
  transition: all 0.3s ease;
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.finding-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.15);
}

.confidence-ring {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 1.1rem;
  margin: 0 auto 1rem;
}

.risk-high { background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%); }
.risk-medium { background: linear-gradient(135deg, #feca57 0%, #ff9ff3 100%); }
.risk-low { background: linear-gradient(135deg, #48cae4 0%, #0096c7 100%); }

.modern-table {
  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.table-header {
  background: var(--gradient-primary);
  color: white;
}

.progress-modern {
  height: 8px;
  border-radius: 10px;
  background: #e9ecef;
}

.btn-modern {
  border-radius: 25px;
  padding: 0.75rem 2rem;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-modern:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

.info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 20px;
}

.breadcrumb-modern {
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(10px);
  border-radius: 15px;
  padding: 1rem 1.5rem;
}
</style>

<div class="container-fluid mt-4">
  <!-- Modern Breadcrumb -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb breadcrumb-modern">
      <li class="breadcrumb-item"><a href="/prediction" class="text-decoration-none"><i class="fas fa-chart-line me-1"></i>Dashboard</a></li>
      <li class="breadcrumb-item"><a href="/prediction/xray" class="text-decoration-none"><i class="fas fa-list me-1"></i>My X-rays</a></li>
      <li class="breadcrumb-item active"><i class="fas fa-search-plus me-1"></i>Analysis Results</li>
    </ol>
  </nav>

  <!-- Success Alert -->
  <% if (req.query.new === 'true') { %>
  <div class="alert alert-success alert-dismissible fade show medical-card" role="alert">
    <i class="fas fa-check-circle me-2"></i>
    <strong>ðŸŽ‰ X-ray Analysis Complete!</strong> Your medical image has been successfully analyzed by our AI system.
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>

  <div class="row">
    <!-- Main Content Area -->
    <div class="col-lg-8">
      <!-- X-ray Display Card -->
      <div class="card medical-card mb-4">
        <div class="card-header medical-header text-white">
          <h4 class="mb-0">
            <i class="fas fa-x-ray me-2"></i>Medical Image Analysis
          </h4>
          <p class="mb-0 opacity-75">AI-powered diagnostic insights</p>
        </div>
        <div class="card-body p-0">
          <div class="xray-display">
            <div class="xray-emoji">ðŸ©»</div>
            <h4 class="text-muted mb-2">X-Ray Scan Analysis</h4>
            <p class="text-muted mb-3">Comprehensive AI evaluation completed</p>
            <div class="d-flex align-items-center justify-content-center">
              <span class="badge bg-<%= xray.status === 'completed' ? 'success' : xray.status === 'processing' ? 'warning' : xray.status === 'failed' ? 'danger' : 'secondary' %> px-3 py-2 rounded-pill fs-6">
                <i class="fas fa-<%= xray.status === 'completed' ? 'check-circle' : xray.status === 'processing' ? 'cog fa-spin' : xray.status === 'failed' ? 'exclamation-triangle' : 'clock' %> me-2"></i>
                <%= xray.status.charAt(0).toUpperCase() + xray.status.slice(1) %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- AI Analysis Results -->
      <% if (xray.status === 'completed' && xray.predictions) { %>

      <!-- Top Findings Summary Cards -->
      <div class="card medical-card mb-4">
        <div class="card-header medical-header text-white">
          <h4 class="mb-0">
            <i class="fas fa-brain me-2"></i>AI Diagnostic Results
          </h4>
          <p class="mb-0 opacity-75">Top medical findings identified</p>
        </div>
        <div class="card-body p-4">
          <div class="row mb-4">
            <% 
            const predictions = typeof xray.predictions === 'string' ? JSON.parse(xray.predictions) : xray.predictions;
            const topFindings = Object.entries(predictions).sort(([,a], [,b]) => b - a).slice(0, 3); 
            %> 
            <% topFindings.forEach(([label, confidence], index) => { %>
            <div class="col-md-4 mb-4">
              <div class="finding-card h-100 text-center p-4">
                <div class="confidence-ring <%= confidence > 0.7 ? 'risk-high' : confidence > 0.4 ? 'risk-medium' : 'risk-low' %> text-white">
                  <%= (confidence * 100).toFixed(0) %>%
                </div>
                <h6 class="fw-bold mb-2 text-dark"><%= label.replace(/_/g, ' ') %></h6>
                <span class="badge <%= confidence > 0.7 ? 'bg-danger' : confidence > 0.4 ? 'bg-warning text-dark' : 'bg-success' %> px-3 py-2 rounded-pill">
                  <i class="fas fa-<%= confidence > 0.7 ? 'exclamation-triangle' : confidence > 0.4 ? 'exclamation-circle' : 'check-circle' %> me-1"></i>
                  <%= confidence > 0.7 ? 'High Risk' : confidence > 0.4 ? 'Monitor' : 'Normal' %>
                </span>
              </div>
            </div>
            <% }); %>
          </div>

          <!-- Interactive Chart -->
          <div class="mb-5">
            <h5 class="mb-4"><i class="fas fa-chart-bar me-2 text-primary"></i>Confidence Distribution</h5>
            <div class="p-3 bg-light rounded-3">
              <canvas id="predictionChart" height="80"></canvas>
            </div>
          </div>

          <!-- Detailed Predictions Table -->
          <div class="mb-4">
            <h5 class="mb-4"><i class="fas fa-list-alt me-2 text-primary"></i>Complete Analysis Report</h5>
            <div class="table-responsive modern-table">
              <table class="table table-hover mb-0">
                <thead class="table-header">
                  <tr>
                    <th class="text-white"><i class="fas fa-stethoscope me-2"></i>Medical Finding</th>
                    <th class="text-white"><i class="fas fa-percentage me-2"></i>Confidence</th>
                    <th class="text-white"><i class="fas fa-shield-alt me-2"></i>Risk Level</th>
                    <th class="text-white"><i class="fas fa-info-circle me-2"></i>Recommendation</th>
                  </tr>
                </thead>
                <tbody>
                  <% Object.entries(predictions).sort(([,a], [,b]) => b - a).forEach(([label, confidence], index) => { %>
                  <tr class="<%= index < 3 ? 'table-warning' : '' %>">
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="me-3">
                          <div class="rounded-circle d-flex align-items-center justify-content-center <%= confidence > 0.7 ? 'bg-danger' : confidence > 0.4 ? 'bg-warning' : 'bg-success' %>" style="width: 32px; height: 32px;">
                            <i class="fas fa-<%= confidence > 0.7 ? 'exclamation-triangle' : confidence > 0.4 ? 'exclamation-circle' : 'check-circle' %> text-white small"></i>
                          </div>
                        </div>
                        <div>
                          <span class="fw-bold"><%= label.replace(/_/g, ' ') %></span>
                          <% if (index < 3) { %><small class="d-block text-warning"><i class="fas fa-star me-1"></i>Top Finding</small><% } %>
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="progress flex-grow-1 me-3 progress-modern" style="width: 80px;">
                          <div class="progress-bar <%= confidence > 0.7 ? 'bg-danger' : confidence > 0.4 ? 'bg-warning' : 'bg-success' %>" 
                               style="width: <%= confidence * 100 %>%"></div>
                        </div>
                        <span class="fw-bold text-<%= confidence > 0.7 ? 'danger' : confidence > 0.4 ? 'warning' : 'success' %>">
                          <%= (confidence * 100).toFixed(1) %>%
                        </span>
                      </div>
                    </td>
                    <td>
                      <% if (confidence > 0.7) { %>
                      <span class="badge bg-danger px-3 py-2 rounded-pill"><i class="fas fa-exclamation-triangle me-1"></i>High Risk</span>
                      <% } else if (confidence > 0.4) { %>
                      <span class="badge bg-warning text-dark px-3 py-2 rounded-pill"><i class="fas fa-eye me-1"></i>Monitor</span>
                      <% } else { %>
                      <span class="badge bg-success px-3 py-2 rounded-pill"><i class="fas fa-check me-1"></i>Normal</span>
                      <% } %>
                    </td>
                    <td>
                      <small class="text-muted">
                        <% if (confidence > 0.7) { %>
                        <i class="fas fa-user-md me-1"></i>Consult specialist immediately
                        <% } else if (confidence > 0.4) { %>
                        <i class="fas fa-calendar-check me-1"></i>Schedule follow-up
                        <% } else { %>
                        <i class="fas fa-thumbs-up me-1"></i>Within normal range
                        <% } %>
                      </small>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <% } else if (xray.status === 'processing') { %>
      <!-- Processing State -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0">
            <i class="fas fa-cog fa-spin me-2"></i>AI Analysis in Progress
          </h5>
        </div>
        <div class="card-body text-center py-5">
          <div
            class="spinner-border text-warning mb-3"
            role="status"
            style="width: 4rem; height: 4rem"
          >
            <span class="visually-hidden">Processing...</span>
          </div>
          <h4 class="text-warning mb-3">Processing Your X-ray</h4>
          <p class="text-muted mb-4">
            Our AI is analyzing your X-ray image. This usually takes 10-30
            seconds.
          </p>

          <!-- Progress Animation -->
          <div class="progress mb-3" style="height: 8px">
            <div
              class="progress-bar progress-bar-striped progress-bar-animated bg-warning"
              role="progressbar"
              style="width: 75%"
              id="processingProgress"
            ></div>
          </div>

          <div class="d-flex justify-content-center gap-3">
            <button class="btn btn-outline-warning" onclick="location.reload()">
              <i class="fas fa-sync-alt me-2"></i>Refresh Status
            </button>
            <div class="text-muted">
              <small
                >Auto-refresh in <span id="countdown">10</span> seconds</small
              >
            </div>
          </div>
        </div>
      </div>

      <% } else if (xray.status === 'failed') { %>
      <!-- Failed State -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
          <h5 class="mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i>Analysis Failed
          </h5>
        </div>
        <div class="card-body text-center py-5">
          <i
            class="fas fa-times-circle text-danger mb-3"
            style="font-size: 4rem"
          ></i>
          <h4 class="text-danger mb-3">Analysis Could Not Be Completed</h4>
          <p class="text-muted mb-4">
            <%= xray.error_message || 'An error occurred during AI processing'
            %>
          </p>

          <div class="d-flex gap-3 justify-content-center">
            <button class="btn btn-outline-danger" onclick="retryProcessing()">
              <i class="fas fa-redo me-2"></i>Retry Analysis
            </button>
            <a href="/prediction/xray/upload" class="btn btn-primary">
              <i class="fas fa-upload me-2"></i>Upload New X-ray
            </a>
          </div>
        </div>
      </div>
      <% } %>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <!-- X-ray Information Card -->
      <div class="card info-card mb-4 sticky-top" style="top: 1rem">
        <div class="card-header text-white">
          <h5 class="mb-0">
            <i class="fas fa-info-circle me-2"></i>Scan Details
          </h5>
          <p class="mb-0 opacity-75 small">Medical information summary</p>
        </div>
        <div class="card-body text-white">
          <!-- Scan Information -->
          <div class="mb-4">
            <div class="d-flex align-items-center mb-2">
              <div class="rounded-circle bg-white bg-opacity-20 p-2 me-3">
                <i class="fas fa-stethoscope text-white"></i>
              </div>
              <div>
                <small class="opacity-75">Scan Type</small>
                <div class="fw-bold">
                  <%= (xray.scanType || 'Unknown').charAt(0).toUpperCase() + (xray.scanType || 'Unknown').slice(1) %> X-ray
                </div>
              </div>
            </div>
          </div>

          <!-- Upload Date -->
          <div class="mb-4">
            <div class="d-flex align-items-center mb-2">
              <div class="rounded-circle bg-white bg-opacity-20 p-2 me-3">
                <i class="fas fa-calendar text-white"></i>
              </div>
              <div>
                <small class="opacity-75">Upload Date</small>
                <div class="fw-medium">
                  <%= new Date(xray.createdAt).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric', 
                    hour: '2-digit', 
                    minute: '2-digit' 
                  }) %>
                </div>
              </div>
            </div>
          </div>

          <!-- Clinical Notes -->
          <% if (xray.notes) { %>
          <div class="mb-4">
            <div class="d-flex align-items-start mb-2">
              <div class="rounded-circle bg-white bg-opacity-20 p-2 me-3 flex-shrink-0">
                <i class="fas fa-notes-medical text-white"></i>
              </div>
              <div>
                <small class="opacity-75">Clinical Notes</small>
                <div class="fw-medium">
                  <%= xray.notes %>
                </div>
              </div>
            </div>
          </div>
          <% } %>

          <!-- File Name -->
          <div class="mb-4">
            <div class="d-flex align-items-center mb-2">
              <div class="rounded-circle bg-white bg-opacity-20 p-2 me-3">
                <i class="fas fa-file-image text-white"></i>
              </div>
              <div>
                <small class="opacity-75">File Name</small>
                <div class="fw-medium small text-break">
                  <%= xray.file_name || 'Unknown filename' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card medical-card mb-4">
        <div class="card-header medical-header text-white">
          <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
          <p class="mb-0 opacity-75 small">Common tasks and navigation</p>
        </div>
        <div class="card-body">
          <div class="d-grid gap-3">
            <a href="/prediction/xray/upload" class="btn btn-primary btn-modern">
              <i class="fas fa-upload me-2"></i>Upload New X-ray
            </a>
            <a href="/prediction/xray" class="btn btn-outline-primary btn-modern">
              <i class="fas fa-list me-2"></i>View All X-rays
            </a>
            <a href="/prediction" class="btn btn-outline-info btn-modern">
              <i class="fas fa-chart-bar me-2"></i>Dashboard
            </a>
            <% if (xray.status === 'completed') { %>
            <button class="btn btn-outline-success btn-modern" onclick="downloadReport()">
              <i class="fas fa-download me-2"></i>Download Report
            </button>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Medical Disclaimer -->
      <div class="card medical-card">
        <div class="card-body text-center p-4">
          <div class="mb-3">
            <i class="fas fa-shield-alt text-primary" style="font-size: 2rem;"></i>
          </div>
          <h6 class="fw-bold mb-2">Medical Disclaimer</h6>
          <p class="small text-muted mb-0">
            This AI analysis is for informational purposes only. Always consult with a qualified healthcare professional for medical diagnosis and treatment.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<% if (xray.status === 'completed' && xray.predictions) { %>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const ctx = document.getElementById("predictionChart").getContext("2d");

    // Prepare data for chart
    const predictions = JSON.parse("<%- JSON.stringify(xray.predictions) %>");
    const labels = Object.keys(predictions);
    const data = Object.values(predictions);
    const colors = data.map((value) => {
      if (value > 0.7) return "#dc3545"; // Red for high risk
      if (value > 0.4) return "#ffc107"; // Yellow for medium risk
      return "#198754"; // Green for low risk
    });

    new Chart(ctx, {
      type: "bar",
      data: {
        labels: labels.map((label) => label.replace(/_/g, " ")),
        datasets: [
          {
            label: "Confidence Level",
            data: data.map((value) => (value * 100).toFixed(1)),
            backgroundColor: colors,
            borderColor: colors.map((color) => color + "80"),
            borderWidth: 2,
            borderRadius: 8,
            borderSkipped: false,
          },
        ],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false,
          },
          tooltip: {
            callbacks: {
              label: function (context) {
                return `Confidence: ${context.parsed.y}%`;
              },
            },
          },
        },
        scales: {
          y: {
            beginAtZero: true,
            max: 100,
            ticks: {
              callback: function (value) {
                return value + "%";
              },
            },
          },
          x: {
            ticks: {
              maxRotation: 45,
              minRotation: 45,
            },
          },
        },
        animation: {
          duration: 2000,
          easing: "easeOutQuart",
        },
      },
    });
  });
</script>
<% } %> <% if (xray.status === 'processing') { %>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    let progress = 0;
    const progressBar = document.getElementById("processingProgress");
    const countdown = document.getElementById("countdown");
    let seconds = 10;

    // Animate progress bar
    const progressInterval = setInterval(() => {
      progress += Math.random() * 15;
      if (progress > 90) progress = 90;
      progressBar.style.width = progress + "%";
    }, 500);

    // Countdown timer
    const countdownInterval = setInterval(() => {
      seconds--;
      countdown.textContent = seconds;
      if (seconds <= 0) {
        clearInterval(countdownInterval);
        location.reload();
      }
    }, 1000);

    // Auto-refresh after 10 seconds
    setTimeout(() => {
      clearInterval(progressInterval);
      location.reload();
    }, 10000);
  });
</script>
<% } %>

<script>
  function retryProcessing() {
    if (confirm("Retry the analysis for this X-ray?")) {
      fetch(`/prediction/xray/<%= xray._id %>/retry`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
      })
        .then((response) => response.json())
        .then((data) => {
          if (data.success) {
            location.reload();
          } else {
            alert("Retry failed: " + data.message);
          }
        })
        .catch((error) => {
          alert("Error: " + error.message);
        });
    }
  }

  function downloadReport() {
    // Create comprehensive report
    const report = generateDetailedReport();
    downloadTextFile(report, `xray-analysis-<%= xray._id %>.txt`);
  }

  function generateDetailedReport() {
    return (
      "X-ray Analysis Report\n====================\n\nGenerated: " +
      new Date().toLocaleString() +
      "\nX-ray ID: <%= xray._id %>\nScan Type: <%= xray.scanType %>\nStatus: <%= xray.status %>\n\nFor detailed analysis, please view the results page."
    );
  }

  function downloadTextFile(content, filename) {
    const blob = new Blob([content], { type: "text/plain" });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement("a");
    a.href = url;
    a.download = filename;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    window.URL.revokeObjectURL(url);
  }

  // Auto-refresh if processing handled by separate script above
</script>