<script>
document.addEventListener('DOMContentLoaded', function() {
    const sidebar = document.getElementById('quickAccessSidebar');
    const toggle = document.getElementById('sidebarToggle');
    const icon = toggle.querySelector('i');
    
    let isOpen = false;
    
    // Toggle sidebar
    toggle.addEventListener('click', function() {
        isOpen = !isOpen;
        
        if (isOpen) {
            sidebar.classList.add('active');
            icon.className = 'fas fa-chevron-left';
        } else {
            sidebar.classList.remove('active');
            icon.className = 'fas fa-chevron-right';
        }
    });
    
    // Close sidebar when clicking outside
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.quick-access-sidebar') && isOpen) {
            closeSidebar();
        }
    });
    
    // Close sidebar with Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && isOpen) {
            closeSidebar();
        }
    });
    
    function closeSidebar() {
        isOpen = false;
        sidebar.classList.remove('active');
        icon.className = 'fas fa-chevron-right';
    }
    
    // Update current time
    function updateTime() {
        const now = new Date();
        const timeString = now.toLocaleTimeString('en-US', { 
            hour12: false, 
            hour: '2-digit', 
            minute: '2-digit' 
        });
        document.getElementById('currentTime').textContent = timeString;
    }
    
    updateTime();
    setInterval(updateTime, 1000);
    
    // Add click tracking
    document.querySelectorAll('.quick-action-item').forEach(item => {
        item.addEventListener('click', function() {
            // Optional: Track usage analytics
            console.log('Sidebar action clicked:', this.href);
            
            // Auto-close sidebar after click on mobile
            if (window.innerWidth <= 768) {
                setTimeout(closeSidebar, 300);
            }
        });
    });
});
</script>