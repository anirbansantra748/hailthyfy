<script>
document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('shortcutsModal');
    const closeBtn = document.getElementById('closeShortcuts');
    const indicator = document.getElementById('shortcutIndicator');
    
    // Define all shortcuts
    const shortcuts = {
        // Analytics Navigation
        'alt+a': { url: '/analytics', name: 'Analytics Home' },
        'alt+o': { url: '/analytics/overview', name: 'Overview Dashboard' },
        'alt+j': { url: '/analytics/patient-journey', name: 'Patient Journey' },
        'alt+d': { url: '/analytics/dashboard', name: 'Full Dashboard' },
        
        // AI Tools
        'alt+p': { url: '/health-analytics/health-predictions', name: 'AI Health Predictions' },
        'alt+i': { url: '/health-analytics/drug-interaction-checker', name: 'Drug Interactions' },
        'alt+c': { url: '/ai', name: 'AI Assistant' },
        
        // General
        'alt+m': { url: '/medicine-search', name: 'Medicine Search' },
        'alt+f': { url: '/doctors', name: 'Find Doctors' },
        'alt+u': { url: '/users/dashboard', name: 'User Dashboard' },
        
        // Interface controls
        'ctrl+s': { action: 'toggleSidebar', name: 'Toggle Sidebar' },
        'ctrl+q': { action: 'toggleFAB', name: 'Toggle FAB Menu' },
        '?': { action: 'showHelp', name: 'Show Help' },
        'escape': { action: 'closeModal', name: 'Close Modal' }
    };
    
    let pressedKeys = new Set();
    let keyTimeout;
    
    // Handle keydown events
    document.addEventListener('keydown', function(e) {
        const key = e.key.toLowerCase();
        const combo = [];
        
        if (e.ctrlKey) combo.push('ctrl');
        if (e.altKey) combo.push('alt');
        if (e.shiftKey) combo.push('shift');
        combo.push(key);
        
        const shortcutKey = combo.join('+');
        pressedKeys.add(key);
        
        // Show indicator for modifier keys
        if (['alt', 'ctrl', 'shift'].includes(key)) {
            showShortcutIndicator(`Press additional key... (${combo.join('+')})`);
            clearTimeout(keyTimeout);
            keyTimeout = setTimeout(hideShortcutIndicator, 2000);
        }
        
        // Execute shortcut if found
        if (shortcuts[shortcutKey]) {
            e.preventDefault();
            executeShortcut(shortcuts[shortcutKey]);
            hideShortcutIndicator();
        }
        
        // Special handling for single key shortcuts
        if (key === '?' && !e.ctrlKey && !e.altKey) {
            e.preventDefault();
            showShortcutsModal();
        }
        
        if (key === 'escape') {
            closeModalsAndMenus();
        }
    });
    
    // Handle keyup events
    document.addEventListener('keyup', function(e) {
        const key = e.key.toLowerCase();
        pressedKeys.delete(key);
        
        if (['alt', 'ctrl', 'shift'].includes(key) && pressedKeys.size === 0) {
            hideShortcutIndicator();
        }
    });
    
    // Execute shortcut action
    function executeShortcut(shortcut) {
        if (shortcut.url) {
            // Navigate to URL
            showShortcutIndicator(`Navigating to ${shortcut.name}...`);
            setTimeout(() => {
                window.location.href = shortcut.url;
            }, 200);
        } else if (shortcut.action) {
            // Execute action
            switch (shortcut.action) {
                case 'toggleSidebar':
                    const sidebarToggle = document.getElementById('sidebarToggle');
                    if (sidebarToggle) {
                        sidebarToggle.click();
                        showShortcutIndicator('Sidebar toggled');
                    }
                    break;
                    
                case 'toggleFAB':
                    const fabMain = document.getElementById('fabMain');
                    if (fabMain) {
                        fabMain.click();
                        showShortcutIndicator('FAB menu toggled');
                    }
                    break;
                    
                case 'showHelp':
                    showShortcutsModal();
                    break;
                    
                case 'closeModal':
                    closeModalsAndMenus();
                    break;
            }
            
            setTimeout(hideShortcutIndicator, 1500);
        }
    }
    
    // Show shortcuts modal
    function showShortcutsModal() {
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
    }
    
    // Close shortcuts modal
    function closeShortcutsModal() {
        modal.classList.remove('active');
        document.body.style.overflow = '';
    }
    
    // Close all modals and menus
    function closeModalsAndMenus() {
        // Close shortcuts modal
        closeShortcutsModal();
        
        // Close FAB menu
        const fabMain = document.getElementById('fabMain');
        const fabMenu = document.getElementById('fabMenu');
        if (fabMain && fabMenu && fabMenu.classList.contains('active')) {
            fabMain.click();
        }
        
        // Close sidebar
        const sidebar = document.getElementById('quickAccessSidebar');
        if (sidebar && sidebar.classList.contains('active')) {
            const sidebarToggle = document.getElementById('sidebarToggle');
            if (sidebarToggle) sidebarToggle.click();
        }
        
        showShortcutIndicator('Closed all menus');
        setTimeout(hideShortcutIndicator, 1000);
    }
    
    // Show shortcut indicator
    function showShortcutIndicator(text) {
        indicator.textContent = text;
        indicator.classList.add('show');
    }
    
    // Hide shortcut indicator
    function hideShortcutIndicator() {
        indicator.classList.remove('show');
        clearTimeout(keyTimeout);
    }
    
    // Modal event listeners
    closeBtn.addEventListener('click', closeShortcutsModal);
    modal.addEventListener('click', function(e) {
        if (e.target === modal) {
            closeShortcutsModal();
        }
    });
    
    // Add visual feedback for interactive elements
    document.addEventListener('keydown', function(e) {
        if (e.altKey || e.ctrlKey) {
            document.body.classList.add('shortcuts-active');
        }
    });
    
    document.addEventListener('keyup', function(e) {
        if (!e.altKey && !e.ctrlKey) {
            document.body.classList.remove('shortcuts-active');
        }
    });
    
    // Add some visual indicators when shortcuts are active
    const style = document.createElement('style');
    style.textContent = `
        body.shortcuts-active [data-shortcut] {
            position: relative;
            outline: 2px solid #10b981;
            outline-offset: 2px;
        }
        
        body.shortcuts-active [data-shortcut]::after {
            content: attr(data-shortcut);
            position: absolute;
            top: -25px;
            left: 0;
            background: #10b981;
            color: white;
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 0.7rem;
            font-weight: bold;
            z-index: 1000;
        }
    `;
    document.head.appendChild(style);
    
    console.log('🚀 Keyboard shortcuts initialized! Press ? for help');
});
</script>