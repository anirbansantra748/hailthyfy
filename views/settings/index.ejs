<% layout('layouts/boilerplate') %>

<style>
:root {
  --healthcare-primary: #10b981;
  --healthcare-secondary: #059669;
  --healthcare-dark: #047857;
  --healthcare-light: #d1fae5;
  --healthcare-accent: #34d399;
}

.settings-container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 2rem;
}

.settings-header {
  text-align: center;
  margin-bottom: 3rem;
  background: linear-gradient(135deg, var(--healthcare-primary), var(--healthcare-secondary));
  color: white;
  padding: 3rem 2rem;
  border-radius: 20px;
  position: relative;
  overflow: hidden;
}

.settings-header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="settings" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse"><text x="10" y="15" text-anchor="middle" fill="rgba(255,255,255,0.1)" font-size="12">‚öôÔ∏è</text></pattern></defs><rect width="100" height="100" fill="url(%23settings)"/></svg>');
  animation: float 20s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateX(0) translateY(0) rotate(0deg); }
  33% { transform: translateX(25px) translateY(-15px) rotate(120deg); }
  66% { transform: translateX(-20px) translateY(20px) rotate(240deg); }
}

.settings-header h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
  position: relative;
  z-index: 2;
}

.settings-header p {
  font-size: 1.1rem;
  opacity: 0.9;
  position: relative;
  z-index: 2;
}

.settings-nav {
  background: white;
  border-radius: 15px;
  padding: 1rem;
  margin-bottom: 2rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(16, 185, 129, 0.1);
}

.settings-nav-list {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 1rem;
  list-style: none;
  padding: 0;
  margin: 0;
}

.settings-nav-item {
  background: rgba(16, 185, 129, 0.1);
  border-radius: 25px;
  padding: 0.75rem 1.5rem;
  color: var(--healthcare-primary);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.settings-nav-item:hover,
.settings-nav-item.active {
  background: var(--healthcare-primary);
  color: white;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(16, 185, 129, 0.3);
}

.settings-content {
  background: white;
  border-radius: 20px;
  padding: 2rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(16, 185, 129, 0.1);
}

.settings-section {
  display: none;
  padding: 1rem 0;
}

.settings-section.active {
  display: block;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid var(--healthcare-light);
}

.section-header .icon {
  font-size: 1.8rem;
  color: var(--healthcare-primary);
}

.section-header h2 {
  color: var(--healthcare-dark);
  margin: 0;
  font-size: 1.5rem;
}

.form-group {
  margin-bottom: 1.5rem;
}

.form-label {
  color: #374151;
  font-weight: 600;
  margin-bottom: 0.5rem;
  display: block;
}

.form-control {
  border: 2px solid #e5e7eb;
  border-radius: 12px;
  padding: 0.875rem 1rem;
  width: 100%;
  font-size: 1rem;
  transition: all 0.3s ease;
  background: #fafafa;
}

.form-control:focus {
  border-color: var(--healthcare-primary);
  box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
  background: white;
  outline: none;
}

.form-select {
  appearance: none;
  background-image: url("data:image/svg+xml;charset=US-ASCII,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'><path fill='%23666' d='M2 0L0 2h4zm0 5L0 3h4z'/></svg>");
  background-repeat: no-repeat;
  background-position: right 1rem center;
  background-size: 12px;
}

.form-check {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem;
  background: #f9fafb;
  border-radius: 12px;
  margin-bottom: 1rem;
}

.form-check-input {
  width: 20px;
  height: 20px;
  accent-color: var(--healthcare-primary);
}

.form-check-label {
  color: #374151;
  font-weight: 500;
}

.btn-save {
  background: linear-gradient(135deg, var(--healthcare-primary), var(--healthcare-secondary));
  color: white;
  border: none;
  border-radius: 12px;
  padding: 1rem 2rem;
  font-weight: 600;
  font-size: 1.1rem;
  transition: all 0.3s ease;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-top: 2rem;
}

.btn-save:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
}

.btn-danger {
  background: #dc2626;
  color: white;
  border: none;
  border-radius: 12px;
  padding: 0.875rem 1.5rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-danger:hover {
  background: #b91c1c;
  transform: translateY(-1px);
}

.alert {
  padding: 1rem;
  border-radius: 12px;
  margin-bottom: 1rem;
  border: none;
}

.alert-info {
  background: linear-gradient(135deg, #dbeafe, #bfdbfe);
  color: #1e40af;
  border-left: 4px solid #3b82f6;
}

.alert-warning {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  color: #92400e;
  border-left: 4px solid #f59e0b;
}

.profile-avatar-preview {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--healthcare-primary), var(--healthcare-secondary));
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  color: white;
  margin-bottom: 1rem;
}

@media (max-width: 768px) {
  .settings-nav-list {
    flex-direction: column;
    align-items: center;
  }

  .settings-nav-item {
    width: 100%;
    justify-content: center;
  }

  .settings-container {
    padding: 1rem;
  }
}
</style>

<div class="settings-container">
  <!-- Header -->
  <div class="settings-header">
    <h1>
      <i class="fas fa-cog me-3"></i>
      Account Settings
    </h1>
    <p>Manage your account preferences and privacy settings</p>
  </div>

  <!-- Navigation -->
  <div class="settings-nav">
    <ul class="settings-nav-list">
      <li class="settings-nav-item active" data-section="profile">
        <i class="fas fa-user"></i>
        Profile
      </li>
      <li class="settings-nav-item" data-section="privacy">
        <i class="fas fa-shield-alt"></i>
        Privacy
      </li>
      <li class="settings-nav-item" data-section="notifications">
        <i class="fas fa-bell"></i>
        Notifications
      </li>
      <li class="settings-nav-item" data-section="security">
        <i class="fas fa-lock"></i>
        Security
      </li>
      <li class="settings-nav-item" data-section="billing">
        <i class="fas fa-credit-card"></i>
        Billing
      </li>
    </ul>
  </div>

  <!-- Content -->
  <div class="settings-content">

    <!-- Profile Settings -->
    <div class="settings-section active" id="profile">
      <div class="section-header">
        <div class="icon">üë§</div>
        <h2>Profile Settings</h2>
      </div>

      <form method="POST" action="/settings/profile">
        <div class="row">
          <div class="col-md-4 text-center mb-4">
            <div class="profile-avatar-preview">
              <%= (user.name || 'U').charAt(0).toUpperCase() %>
            </div>
            <input type="file" class="form-control" accept="image/*">
            <small class="text-muted">Upload a new profile picture</small>
          </div>

          <div class="col-md-8">
            <div class="form-group">
              <label for="name" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= user.name || '' %>">
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" readonly>
              <small class="text-muted">Contact support to change your email address</small>
            </div>

            <div class="form-group">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" value="<%= user.phone || '' %>">
            </div>

            <div class="form-group">
              <label for="bio" class="form-label">Bio</label>
              <textarea class="form-control" id="bio" name="bio" rows="3" placeholder="Tell us about yourself..."><%= user.bio || '' %></textarea>
            </div>
          </div>
        </div>

        <button type="submit" class="btn-save">
          <i class="fas fa-save"></i>
          Save Profile Changes
        </button>
      </form>
    </div>

    <!-- Privacy Settings -->
    <div class="settings-section" id="privacy">
      <div class="section-header">
        <div class="icon">üõ°Ô∏è</div>
        <h2>Privacy Settings</h2>
      </div>

      <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Control how your information is shared and who can see your profile.
      </div>

      <form method="POST" action="/settings/privacy">
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="profilePublic" name="profilePublic">
          <label for="profilePublic" class="form-check-label">
            Make my profile publicly visible
          </label>
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="shareHealthData" name="shareHealthData">
          <label for="shareHealthData" class="form-check-label">
            Allow sharing anonymized health data for research
          </label>
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="allowDoctorContact" name="allowDoctorContact" checked>
          <label for="allowDoctorContact" class="form-check-label">
            Allow doctors to contact me for consultations
          </label>
        </div>

        <div class="form-group">
          <label for="dataRetention" class="form-label">Data Retention Period</label>
          <select class="form-control form-select" id="dataRetention" name="dataRetention">
            <option value="1year">1 Year</option>
            <option value="3years" selected>3 Years</option>
            <option value="5years">5 Years</option>
            <option value="indefinite">Indefinite</option>
          </select>
        </div>

        <button type="submit" class="btn-save">
          <i class="fas fa-shield-alt"></i>
          Update Privacy Settings
        </button>
      </form>
    </div>

    <!-- Notification Settings -->
    <div class="settings-section" id="notifications">
      <div class="section-header">
        <div class="icon">üîî</div>
        <h2>Notification Preferences</h2>
      </div>

      <form method="POST" action="/settings/notifications">
        <h4>Email Notifications</h4>
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="emailAppointments" name="emailAppointments" checked>
          <label for="emailAppointments" class="form-check-label">
            Appointment reminders and confirmations
          </label>
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="emailReports" name="emailReports" checked>
          <label for="emailReports" class="form-check-label">
            AI health reports and analysis
          </label>
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="emailMarketing" name="emailMarketing">
          <label for="emailMarketing" class="form-check-label">
            Health tips and promotional content
          </label>
        </div>

        <h4 class="mt-4">Push Notifications</h4>
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="pushMessages" name="pushMessages" checked>
          <label for="pushMessages" class="form-check-label">
            New messages from doctors
          </label>
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="pushChallenges" name="pushChallenges" checked>
          <label for="pushChallenges" class="form-check-label">
            Health challenge updates
          </label>
        </div>

        <button type="submit" class="btn-save">
          <i class="fas fa-bell"></i>
          Save Notification Settings
        </button>
      </form>
    </div>

    <!-- Security Settings -->
    <div class="settings-section" id="security">
      <div class="section-header">
        <div class="icon">üîí</div>
        <h2>Security Settings</h2>
      </div>

      <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Keep your account secure by using a strong password and enabling two-factor authentication.
      </div>

      <form method="POST" action="/settings/security">
        <div class="form-group">
          <label for="currentPassword" class="form-label">Current Password</label>
          <input type="password" class="form-control" id="currentPassword" name="currentPassword">
        </div>

        <div class="form-group">
          <label for="newPassword" class="form-label">New Password</label>
          <input type="password" class="form-control" id="newPassword" name="newPassword">
        </div>

        <div class="form-group">
          <label for="confirmPassword" class="form-label">Confirm New Password</label>
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="twoFactor" name="twoFactor">
          <label for="twoFactor" class="form-check-label">
            Enable two-factor authentication (Recommended)
          </label>
        </div>

        <button type="submit" class="btn-save">
          <i class="fas fa-key"></i>
          Update Security Settings
        </button>
      </form>
    </div>

    <!-- Billing Settings -->
    <div class="settings-section" id="billing">
      <div class="section-header">
        <div class="icon">üí≥</div>
        <h2>Billing & Subscription</h2>
      </div>

      <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        You are currently on the <strong>Free Plan</strong>. Upgrade to Premium for advanced AI features and priority support.
      </div>

      <div class="row">
        <div class="col-md-6">
          <div style="background: var(--healthcare-light); padding: 2rem; border-radius: 15px; margin-bottom: 2rem;">
            <h4 style="color: var(--healthcare-dark); margin-bottom: 1rem;">Current Plan</h4>
            <div style="font-size: 2rem; font-weight: 700; color: var(--healthcare-primary); margin-bottom: 0.5rem;">Free</div>
            <div style="color: #6b7280;">Basic AI analysis, community access</div>
            <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid rgba(16, 185, 129, 0.2);">
              <small style="color: #6b7280;">‚Ä¢ 5 AI scans per month</small><br>
              <small style="color: #6b7280;">‚Ä¢ Community support</small><br>
              <small style="color: #6b7280;">‚Ä¢ Basic health tracking</small>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div style="background: linear-gradient(135deg, var(--healthcare-primary), var(--healthcare-secondary)); color: white; padding: 2rem; border-radius: 15px; margin-bottom: 2rem;">
            <h4 style="margin-bottom: 1rem;">Premium Plan</h4>
            <div style="font-size: 2rem; font-weight: 700; margin-bottom: 0.5rem;">$19<small style="font-size: 1rem;">/month</small></div>
            <div style="opacity: 0.9;">Advanced AI, priority support</div>
            <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid rgba(255, 255, 255, 0.2);">
              <small style="opacity: 0.9;">‚Ä¢ Unlimited AI scans</small><br>
              <small style="opacity: 0.9;">‚Ä¢ Priority doctor access</small><br>
              <small style="opacity: 0.9;">‚Ä¢ Advanced analytics</small><br>
              <small style="opacity: 0.9;">‚Ä¢ 24/7 support</small>
            </div>
            <button type="button" class="btn" style="background: white; color: var(--healthcare-primary); border: none; border-radius: 8px; padding: 0.75rem 1.5rem; font-weight: 600; margin-top: 1rem; width: 100%;">
              Upgrade Now
            </button>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const navItems = document.querySelectorAll('.settings-nav-item');
  const sections = document.querySelectorAll('.settings-section');

  navItems.forEach(item => {
    item.addEventListener('click', () => {
      const targetSection = item.dataset.section;

      // Update active nav item
      navItems.forEach(nav => nav.classList.remove('active'));
      item.classList.add('active');

      // Update active section
      sections.forEach(section => {
        section.classList.remove('active');
        if (section.id === targetSection) {
          section.classList.add('active');
        }
      });
    });
  });

  // Form validation
  const forms = document.querySelectorAll('form');
  forms.forEach(form => {
    form.addEventListener('submit', (e) => {
      e.preventDefault();

      // Show success message (in real app, this would submit to server)
      const section = form.closest('.settings-section');
      const existingAlert = section.querySelector('.alert-success');
      if (existingAlert) existingAlert.remove();

      const successAlert = document.createElement('div');
      successAlert.className = 'alert alert-success';
      successAlert.innerHTML = '<i class="fas fa-check-circle me-2"></i>Settings saved successfully!';
      successAlert.style.background = 'linear-gradient(135deg, var(--healthcare-light), rgba(16, 185, 129, 0.1))';
      successAlert.style.color = 'var(--healthcare-dark)';
      successAlert.style.borderLeft = '4px solid var(--healthcare-primary)';

      section.insertBefore(successAlert, form);

      setTimeout(() => {
        successAlert.remove();
      }, 3000);
    });
  });
});
</script>
