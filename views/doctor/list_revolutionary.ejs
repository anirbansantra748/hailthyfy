                            <% if (doctor.subSpecializations.length > 3) { %>
                                <span class="specialization-tag more-specializations">
                                    +<%= doctor.subSpecializations.length - 3 %> more
                                </span>
                            <% } %>
                        </div>
                    </div>
                    <% } %>

