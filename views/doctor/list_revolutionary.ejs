    <div class="pagination-section">
        <div class="pagination">
            <!-- Previous Page -->
            <% if (pagination.hasPrevPage) { %>
                <a 
                    class="pagination-btn pagination-nav" 
                    href="/doctors?page=<%= pagination.currentPage - 1 %>&<%= new URLSearchParams(filters).toString() %>"
