    border-radius: 15px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    border: 2px solid #e9ecef;
    transition: all 0.3s ease;
    position: relative;
}

.qualification-item:hover {
    border-color: var(--medical-primary);
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
}

.remove-qualification {
