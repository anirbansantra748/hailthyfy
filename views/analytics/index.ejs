<% layout('layouts/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Healthcare Analytics | Healthfy' %></title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .hero-section {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.95), rgba(99, 102, 241, 0.95));
            color: white;
            padding: 80px 0;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)" /></svg>');
            opacity: 0.3;
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-title {
            font-family: 'Poppins', sans-serif;
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .hero-subtitle {
            font-size: 1.3rem;
            font-weight: 300;
            opacity: 0.9;
            margin-bottom: 3rem;
        }

        .main-content {
            margin-top: -50px;
            position: relative;
            z-index: 10;
            background: #f8fafc;
            border-radius: 30px 30px 0 0;
            min-height: calc(100vh - 300px);
            padding: 60px 0;
        }

        .analytics-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            border: none;
            overflow: hidden;
            height: 100%;
        }

        .analytics-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

        .card-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 32px;
            color: white;
        }

        .card-icon.overview {
            background: linear-gradient(135deg, #10b981, #059669);
        }

        .card-icon.journey {
            background: linear-gradient(135deg, #3b82f6, #2563eb);
        }

        .card-icon.dashboard {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        }

        .card-icon.predictions {
            background: linear-gradient(135deg, #f59e0b, #d97706);
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 1rem;
        }

        .card-description {
            color: #6b7280;
            line-height: 1.6;
            margin-bottom: 2rem;
        }

        .feature-list {
            list-style: none;
            padding: 0;
            margin-bottom: 2rem;
        }

        .feature-list li {
            display: flex;
            align-items: center;
            padding: 0.5rem 0;
            color: #374151;
            font-size: 0.9rem;
        }

        .feature-list li i {
            color: #10b981;
            margin-right: 0.75rem;
            font-size: 0.8rem;
        }

        .btn-analytics {
            width: 100%;
            padding: 1rem;
            border-radius: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            border: none;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .btn-primary-analytics {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
        }

        .btn-primary-analytics:hover {
            background: linear-gradient(135deg, #059669, #047857);
            transform: translateY(-1px);
            color: white;
        }

        .btn-secondary-analytics {
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
        }

        .btn-secondary-analytics:hover {
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            transform: translateY(-1px);
            color: white;
        }

        .btn-purple-analytics {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
            color: white;
        }

        .btn-purple-analytics:hover {
            background: linear-gradient(135deg, #7c3aed, #6d28d9);
            transform: translateY(-1px);
            color: white;
        }

        .btn-warning-analytics {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
        }

        .btn-warning-analytics:hover {
            background: linear-gradient(135deg, #d97706, #b45309);
            transform: translateY(-1px);
            color: white;
        }

        @media (max-width: 768px) {
            .hero-title { font-size: 2.5rem; }
            .hero-subtitle { font-size: 1.1rem; }
            .main-content { margin-top: -30px; padding: 40px 0; }
        }

        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease forwards;
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">
                    <i class="fas fa-chart-line me-3"></i>
                    Healthcare Analytics Suite
                </h1>
                <p class="hero-subtitle">
                    Comprehensive healthcare data visualization and insights platform
                </p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <div class="badge bg-light text-dark px-3 py-2 fs-6">
                        <i class="fas fa-users me-2"></i>Patient Analytics
                    </div>
                    <div class="badge bg-light text-dark px-3 py-2 fs-6">
                        <i class="fas fa-heartbeat me-2"></i>Health Insights
                    </div>
                    <div class="badge bg-light text-dark px-3 py-2 fs-6">
                        <i class="fas fa-brain me-2"></i>AI Predictions
                    </div>
                    <div class="badge bg-light text-dark px-3 py-2 fs-6">
                        <i class="fas fa-chart-bar me-2"></i>Real-time Data
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <div class="row g-4">
                <!-- Analytics Overview -->
                <div class="col-lg-6">
                    <div class="analytics-card p-4 fade-in" style="animation-delay: 0.1s;">
                        <div class="card-icon overview">
                            <i class="fas fa-chart-pie"></i>
                        </div>
                        <h3 class="card-title text-center">Analytics Overview</h3>
                        <p class="card-description text-center">
                            Get a comprehensive overview of your healthcare system's key performance indicators and metrics.
                        </p>
                        <ul class="feature-list">
                            <li><i class="fas fa-check"></i> Real-time patient statistics</li>
                            <li><i class="fas fa-check"></i> Health condition distributions</li>
                            <li><i class="fas fa-check"></i> Response time analysis</li>
                            <li><i class="fas fa-check"></i> AI-generated insights</li>
                            <li><i class="fas fa-check"></i> Interactive charts and graphs</li>
                        </ul>
                        <a href="/analytics/overview" class="btn-analytics btn-primary-analytics">
                            <i class="fas fa-eye me-2"></i>View Overview
                        </a>
                    </div>
                </div>

                <!-- Patient Journey -->
                <div class="col-lg-6">
                    <div class="analytics-card p-4 fade-in" style="animation-delay: 0.2s;">
                        <div class="card-icon journey">
                            <i class="fas fa-route"></i>
                        </div>
                        <h3 class="card-title text-center">Patient Journey Analytics</h3>
                        <p class="card-description text-center">
                            Visualize and analyze patient pathways through your healthcare system with advanced D3.js visualizations.
                        </p>
                        <ul class="feature-list">
                            <li><i class="fas fa-check"></i> Interactive journey mapping</li>
                            <li><i class="fas fa-check"></i> Flow and heatmap visualizations</li>
                            <li><i class="fas fa-check"></i> Common pathway analysis</li>
                            <li><i class="fas fa-check"></i> Bottleneck identification</li>
                            <li><i class="fas fa-check"></i> Export and sharing options</li>
                        </ul>
                        <a href="/analytics/patient-journey" class="btn-analytics btn-secondary-analytics">
                            <i class="fas fa-map-marked-alt me-2"></i>Explore Journey
                        </a>
                    </div>
                </div>

                <!-- Full Dashboard -->
                <div class="col-lg-6">
                    <div class="analytics-card p-4 fade-in" style="animation-delay: 0.3s;">
                        <div class="card-icon dashboard">
                            <i class="fas fa-tachometer-alt"></i>
                        </div>
                        <h3 class="card-title text-center">Complete Dashboard</h3>
                        <p class="card-description text-center">
                            Access the full-featured analytics dashboard with medical trends, doctor performance, and advanced features.
                        </p>
                        <ul class="feature-list">
                            <li><i class="fas fa-check"></i> Medical trends analysis</li>
                            <li><i class="fas fa-check"></i> Doctor performance metrics</li>
                            <li><i class="fas fa-check"></i> Advanced D3.js visualizations</li>
                            <li><i class="fas fa-check"></i> Real-time data updates</li>
                            <li><i class="fas fa-check"></i> Comprehensive reporting</li>
                        </ul>
                        <a href="/analytics/dashboard" class="btn-analytics btn-purple-analytics">
                            <i class="fas fa-chart-bar me-2"></i>Full Dashboard
                        </a>
                    </div>
                </div>

                <!-- AI Health Predictions -->
                <div class="col-lg-6">
                    <div class="analytics-card p-4 fade-in" style="animation-delay: 0.4s;">
                        <div class="card-icon predictions">
                            <i class="fas fa-brain"></i>
                        </div>
                        <h3 class="card-title text-center">AI Health Predictions</h3>
                        <p class="card-description text-center">
                            Leverage artificial intelligence to generate personalized health predictions and risk assessments.
                        </p>
                        <ul class="feature-list">
                            <li><i class="fas fa-check"></i> Personalized risk assessments</li>
                            <li><i class="fas fa-check"></i> Disease prediction models</li>
                            <li><i class="fas fa-check"></i> Treatment recommendations</li>
                            <li><i class="fas fa-check"></i> Drug interaction checking</li>
                            <li><i class="fas fa-check"></i> Health trend forecasting</li>
                        </ul>
                        <a href="/health-analytics/health-predictions" class="btn-analytics btn-warning-analytics">
                            <i class="fas fa-magic me-2"></i>AI Predictions
                        </a>
                    </div>
                </div>
            </div>

            <!-- Additional Information -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="analytics-card p-4 fade-in" style="animation-delay: 0.5s;">
                        <div class="text-center">
                            <h4 class="mb-3">
                                <i class="fas fa-info-circle me-2 text-primary"></i>
                                Getting Started
                            </h4>
                            <p class="text-muted mb-4">
                                Choose any of the analytics modules above to start exploring your healthcare data.
                                Each module provides unique insights and visualizations tailored to different aspects of healthcare management.
                            </p>
                            <div class="row g-3 justify-content-center">
                                <div class="col-md-3 col-sm-6">
                                    <div class="text-center">
                                        <i class="fas fa-users fs-2 text-primary mb-2"></i>
                                        <div class="fw-bold">Patient Data</div>
                                        <small class="text-muted">Real-time tracking</small>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="text-center">
                                        <i class="fas fa-chart-line fs-2 text-success mb-2"></i>
                                        <div class="fw-bold">Trend Analysis</div>
                                        <small class="text-muted">Advanced insights</small>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="text-center">
                                        <i class="fas fa-brain fs-2 text-warning mb-2"></i>
                                        <div class="fw-bold">AI Powered</div>
                                        <small class="text-muted">Smart predictions</small>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="text-center">
                                        <i class="fas fa-shield-alt fs-2 text-info mb-2"></i>
                                        <div class="fw-bold">Secure</div>
                                        <small class="text-muted">HIPAA compliant</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
