<%- include('../partials/header') %>

<!-- Telegram-style Chat Interface -->
<div class="telegram-chat-container">
  <!-- Left Sidebar - Chat List -->
  <div class="chat-sidebar">
    <div class="sidebar-header">
      <h5 class="mb-0 text-white">Chats</h5>
    </div>
    <div class="chat-list">
      <% if (typeof allChats !== 'undefined' && allChats.length > 0) { %>
        <% allChats.forEach(function(chatItem) { %>
          <% const otherUser = chatItem.participants.find(p => p._id.toString() !== user._id.toString()); %>
          <a href="/chat/<%= chatItem._id %>" class="chat-item <%= chatItem._id.toString() === chat._id.toString() ? 'active' : '' %>">
            <div class="chat-avatar">
              <% if (otherUser && otherUser.profileImage) { %>
                <img src="<%= otherUser.profileImage %>" alt="<%= otherUser.name %>">
              <% } else { %>
                <div class="avatar-placeholder">
                  <%= otherUser ? otherUser.name.charAt(0).toUpperCase() : 'U' %>
                </div>
              <% } %>
            </div>
            <div class="chat-info">
              <div class="chat-name"><%= otherUser ? otherUser.name : 'Unknown User' %></div>
              <div class="chat-preview"><%= chatItem.lastMessage || 'No messages yet' %></div>
            </div>
            <div class="chat-time">
              <%= chatItem.lastUpdated ? new Date(chatItem.lastUpdated).toLocaleTimeString('en-US', {hour: '2-digit', minute: '2-digit'}) : '' %>
            </div>
          </a>
        <% }); %>
      <% } else { %>
        <div class="no-chats">
          <i class="fas fa-comments fa-2x mb-2"></i>
          <p>No chats yet</p>
          <a href="/users/chat-doctors" class="btn btn-primary btn-sm">Start a chat</a>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Right Side - Active Chat -->
  <div class="chat-main">
    <!-- Chat Header -->
    <div class="chat-header">
      <% const otherParticipant = chat.participants.find(p => p._id.toString() !== user._id.toString()); %>
      <div class="d-flex align-items-center">
        <div class="chat-avatar me-3">
          <% if (otherParticipant && otherParticipant.profileImage) { %>
            <img src="<%= otherParticipant.profileImage %>" alt="<%= otherParticipant.name %>">
          <% } else { %>
            <div class="avatar-placeholder">
              <%= otherParticipant ? otherParticipant.name.charAt(0).toUpperCase() : 'U' %>
            </div>
          <% } %>
        </div>
        <div>
          <h6 class="mb-0"><%= otherParticipant ? otherParticipant.name : 'Unknown User' %></h6>
          <small class="text-muted">Online</small>
        </div>
      </div>
      <div class="chat-actions">
        <% if (user.isDoctor) { %>
          <!-- Doctor can start video calls -->
          <form action="/video-calls/create/<%= chat._id %>" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-sm btn-outline-light" title="Start Video Call">
              <i class="fas fa-video"></i> Start Call
            </button>
          </form>
        <% } else { %>
          <!-- User can join with meeting ID -->
          <button class="btn btn-sm btn-outline-light" onclick="showJoinCallModal()" title="Join Video Call">
            <i class="fas fa-phone"></i> Join Call
          </button>
        <% } %>
        <button class="btn btn-sm btn-outline-light" onclick="shareFiles()">
          <i class="fas fa-paperclip"></i>
        </button>
      </div>
    </div>

    <!-- Messages Area -->
    <div class="messages-area" id="messagesContainer">
      <% if (chat.messages && chat.messages.length > 0) { %>
        <% chat.messages.forEach(function(message) { %>
          <% const isOwn = message.sender._id.toString() === user._id.toString(); %>
          <div class="message-wrapper <%= isOwn ? 'own' : 'other' %>">
            <% if (message.type === 'video_call_request') { %>
              <!-- Video Call Message -->
              <div class="video-call-message <%= isOwn ? 'own' : 'other' %>">
                <div class="video-call-content">
                  <i class="fas fa-video fa-lg mb-2"></i>
                  <div class="call-text">
                    <strong>ðŸ“¹ Video Call Started!</strong>
                    <div class="meeting-info">
                      <span class="meeting-id">Meeting ID: <strong><%= message.meetingId %></strong></span>
                    </div>
                  </div>
                  <% if (!isOwn) { %>
                    <!-- Join button for the receiver -->
                    <a href="/video-calls/<%= message.videoCallId %>" class="join-call-btn">
                      <i class="fas fa-phone"></i> Join Call
                    </a>
                  <% } else { %>
                    <!-- Go to call button for the initiator -->
                    <a href="/video-calls/<%= message.videoCallId %>" class="join-call-btn">
                      <i class="fas fa-video"></i> Go to Call
                    </a>
                  <% } %>
                </div>
                <div class="message-time">
                  <%= new Date(message.createdAt).toLocaleTimeString('en-US', {hour: '2-digit', minute: '2-digit'}) %>
                </div>
              </div>
            <% } else { %>
              <!-- Regular Text Message -->
              <div class="message-bubble <%= isOwn ? 'own' : 'other' %>">
                <div class="message-content">
                  <%= message.content %>
                </div>
                <div class="message-time">
                  <%= new Date(message.createdAt).toLocaleTimeString('en-US', {hour: '2-digit', minute: '2-digit'}) %>
                  <% if (isOwn) { %>
                    <i class="fas fa-check message-status"></i>
                  <% } %>
                </div>
              </div>
            <% } %>
          </div>
        <% }); %>
      <% } else { %>
        <div class="empty-chat">
          <i class="fas fa-comments fa-3x mb-3"></i>
          <h5>No messages yet</h5>
          <p>Start the conversation by sending a message</p>
        </div>
      <% } %>
    </div>

    <!-- Message Input -->
    <div class="message-input-area">
      <form action="/chat/<%= chat._id %>/messages" method="POST" class="message-form">
        <div class="input-wrapper">
          <input 
            type="text" 
            name="content" 
            class="message-input" 
            placeholder="Type a message..."
            required
            maxlength="1000"
          >
          <input type="hidden" name="type" value="text">
          <button type="submit" class="send-btn">
            <i class="fas fa-paper-plane"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Join Video Call Modal -->
<div class="modal fade" id="joinCallModal" tabindex="-1" aria-labelledby="joinCallModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="joinCallModalLabel">
          <i class="fas fa-video me-2"></i>Join Video Call
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/video-calls/join" method="POST" id="joinCallForm">
          <div class="mb-3">
            <label for="meetingIdInput" class="form-label">Meeting ID</label>
            <input 
              type="text" 
              class="form-control text-center" 
              id="meetingIdInput" 
              name="meetingId" 
              placeholder="Enter 6-digit meeting ID"
              maxlength="6"
              required
              style="font-size: 18px; font-weight: bold; letter-spacing: 2px;"
            >
            <div class="form-text">Enter the meeting ID provided by the doctor</div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" form="joinCallForm" class="btn btn-success">
          <i class="fas fa-phone me-1"></i>Join Call
        </button>
      </div>
    </div>
  </div>
</div>

<!-- File Upload Modal -->
<div
  class="modal fade"
  id="fileUploadModal"
  tabindex="-1"
  aria-labelledby="fileUploadModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="fileUploadModalLabel">Share Files</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="fileUploadForm">
          <div class="mb-3">
            <label for="fileInput" class="form-label">Select File</label>
            <input
              type="file"
              class="form-control"
              id="fileInput"
              accept="image/*,.pdf,.doc,.docx,.txt"
            />
            <small class="text-muted"
              >Supported: Images, PDFs, Documents (Max 5MB)</small
            >
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="button" class="btn btn-primary" onclick="uploadFile()">
          Upload & Send
        </button>
      </div>
    </div>
  </div>
</div>

<script>
// Simple chat functions
function shareFiles() {
  alert('File sharing coming soon!');
}

function showJoinCallModal() {
  const modal = new bootstrap.Modal(document.getElementById('joinCallModal'));
  modal.show();
}

// Auto-scroll to bottom when page loads
document.addEventListener('DOMContentLoaded', function() {
  const container = document.getElementById('messagesContainer');
  if (container) {
    container.scrollTop = container.scrollHeight;
  }
});
</script>

