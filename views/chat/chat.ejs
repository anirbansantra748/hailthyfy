.input-wrapper {
  display: flex;
  align-items: center;
  background: #f0f2f5;
  border-radius: 25px;
  padding: 8px 16px;
  box-shadow: inset 0 1px 4px rgba(0,0,0,0.1);
}

.message-input {
  flex: 1;
  border: none;
  background: transparent;
  outline: none;
  font-size: 15px;
  padding: 8px 0;
  color: #333;
}

.message-input::placeholder {
  color: #8a8d91;
}

.send-btn {
  background: linear-gradient(135deg, #0084ff 0%, #0066cc 100%);
  border: none;
  border-radius: 50%;
