# Database Configuration
MONGO_URL=mongodb://127.0.0.1:27017/healthfy
SESSION_SECRET=your_session_secret_here

# ML Service Configuration
ML_API_URL=http://localhost:8000
ML_API_KEY=dev_key_for_development_only
ML_API_TIMEOUT_MS=30000

# Prediction Processing Mode
# Options: "sync" (immediate) or "queue" (background processing)
PREDICTION_MODE=sync

# Redis Configuration (for queue mode)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/xrays

# Security
NODE_ENV=development
HELMET_ENABLED=true

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Payment Configuration (optional)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
